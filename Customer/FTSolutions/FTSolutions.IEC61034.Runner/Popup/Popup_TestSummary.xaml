<bw:BaseIEC61034Popup x:Class="FTSolutions.IEC61034.Runner.Popup.Popup_TestSummary"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
                      xmlns:sys="clr-namespace:System;assembly=mscorlib"
                      xmlns:bw="clr-namespace:FTSolutions.IEC61034.Common.Base;assembly=FTSolutions.IEC61034.Common"
                      xmlns:lego="clr-namespace:eccFramework.SharedLib.Lego.Brick;assembly=eccFramework.SharedLib.Lego"
                      xmlns:conv="clr-namespace:FTSolutions.IEC61034.Common.Converter;assembly=FTSolutions.IEC61034.Common"
                      AllowsTransparency="True" WindowStyle="None" ResizeMode="NoResize"
                      WindowStartupLocation="CenterScreen"
                      Title="{DynamicResource main_header}" Height="750" Width="680">
    <bw:BaseIEC61034Popup.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/eccFramework.SharedLib.Core;component/Styles/PopupBrushes.xaml"/>
                <ResourceDictionary Source="/FTSolutions.IEC61034.Runner;component/Styles/IEC61034Brushes.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <conv:BooleanToValidTextConverter x:Key="booleanToValidTextConverter" />
            <conv:BooleanToValidColorConverter x:Key="booleanToValidColorConverter" />

            <Style TargetType="lego:eccTextBlock">
                <Setter Property="FontSize" Value="18" />
                <Setter Property="VerticalAlignment" Value="Center" />
                <Setter Property="HorizontalAlignment" Value="Right" />
                <Setter Property="Margin" Value="0,0,15,0" />
            </Style>

            <Style TargetType="lego:eccTextBox">
                <Setter Property="FontSize" Value="18" />
                <Setter Property="VerticalAlignment" Value="Center" />
                <Setter Property="HorizontalAlignment" Value="Stretch" />
                <Setter Property="Height" Value="35" />
                <Setter Property="Margin" Value="2" />
                <Setter Property="Foreground" Value="{StaticResource popup_textbox_fg}" />
            </Style>

            <Style x:Key="styleValue" TargetType="lego:eccTextBox">
                <Setter Property="FontWeight" Value="Bold" />
                <Setter Property="FontSize" Value="18" />
                <Setter Property="VerticalAlignment" Value="Center" />
                <Setter Property="HorizontalAlignment" Value="Stretch" />
                <Setter Property="HorizontalContentAlignment" Value="Center" />
                <Setter Property="VerticalContentAlignment" Value="Center" />
                <Setter Property="Height" Value="40" />
                <Setter Property="Margin" Value="10,1" />
                <Setter Property="IsReadOnly" Value="False" />
                <Setter Property="BorderBrush" Value="{StaticResource state_none_color}" />
                <Setter Property="Foreground" Value="{StaticResource state_valid_color}" />
            </Style>

            <Style x:Key="styleResultTitle" TargetType="lego:eccTextBlock">
                <Setter Property="Margin" Value="10,5" />
                <Setter Property="Foreground" Value="{StaticResource state_action_color}" />
                <Setter Property="FontSize" Value="16" />
                <Setter Property="FontWeight" Value="Bold" />
                <Setter Property="VerticalAlignment" Value="Center" />
                <Setter Property="HorizontalAlignment" Value="Center" />
            </Style>
        </ResourceDictionary>
    </bw:BaseIEC61034Popup.Resources>

    <DockPanel Background="{StaticResource popup_background}">
        <!-- HEADER -->
        <Border DockPanel.Dock="Top" Height="85" BorderThickness="1"
                BorderBrush="{StaticResource popup_header_bb}" Background="{StaticResource popup_header_bg}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="140"/>
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" BorderThickness="1" Background="White" Margin="5,16">
                    <Image Source="pack://application:,,,/eccFramework.SharedLib.Core;component/Images/ftsolutions_logo.png" 
                           RenderOptions.BitmapScalingMode="HighQuality" SnapsToDevicePixels="True" Margin="5" HorizontalAlignment="Right" />
                </Border>

                <StackPanel Grid.Column="1">
                    <TextBlock FontSize="20" Style="{StaticResource headerLabelTitleStyle}" Text="{DynamicResource popup_test_summary_title}" />
                    <TextBlock Text="{DynamicResource popup_test_summary_desc}" Style="{StaticResource headerLabelContentStyle}" TextWrapping="Wrap" />
                </StackPanel>

                <Border Grid.Column="2" Margin="10" BorderThickness="1" Background="{Binding SESSION_MANAGER.LogoBackground}">
                    <Image Source="{Binding SESSION_MANAGER.ClientLogoPath}" Margin="3" />
                </Border>
            </Grid>
        </Border>
        <!-- FOOTER -->
        <Border DockPanel.Dock="Bottom" Height="70" Padding="0,4,0,0" BorderThickness="1" 
                BorderBrush="{StaticResource popup_footer_bb}" Background="{StaticResource popup_footer_bg}">
            <DockPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">                    
                    <lego:FancyButton Style="{StaticResource fancyButtonStyle}" Height="60"
                                      FuncType="Save" Title="{DynamicResource btn_save_next}" SubTitle="{DynamicResource btn_save_next_desc}"
                                      Command="{Binding SaveNextCommand}" />
                    <lego:FancyButton Style="{StaticResource fancyButtonStyle}" Height="60"
                                      FuncType="Cancel" Title="{DynamicResource btn_cancel}" SubTitle="{DynamicResource btn_close_desc}"
                                      Command="{Binding CancelClick}" />
                </StackPanel>
            </DockPanel>
        </Border>
        <!-- BODY -->
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="7*"/>
                <ColumnDefinition Width="4.5*"/>
                <ColumnDefinition Width="5*"/>
                <ColumnDefinition Width="4.5*"/>
            </Grid.ColumnDefinitions>

            <lego:eccGroupBox Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4" Tag="16" Header="{StaticResource popup_new_registration_test_result}" Margin="5,3,5,3"
                              BorderBrush="{StaticResource groupbox_header_bg}" Background="{StaticResource popup_header_bg}">
                <Border Margin="2" Background="Black" BorderBrush="DarkGreen" BorderThickness="1,1,1,3">
                    <Grid VerticalAlignment="Center">
                        <Grid.RowDefinitions>                            
                            <RowDefinition Height="70"/>
                            <RowDefinition Height="70"/>
                            <RowDefinition Height="70"/>
                            <!--<RowDefinition Height="70"/>-->
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="340" />
                            <ColumnDefinition Width="40"/>
                            <ColumnDefinition Width="60"/>
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>                     

                        <lego:eccTextBlock Grid.Row="0" Grid.Column="0" Text="{DynamicResource popup_test_summary_flameout_time}" Foreground="{StaticResource state_valid_color}" FontSize="20"/>
                        <lego:eccTextBox Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="3" IsEnabled="False" Style="{StaticResource styleValue}" Height="60" FontSize="30" HorizontalContentAlignment="Center"
                                     Text="{Binding TestItem_TestSummary.FlameoutTime}"/>

                        <lego:eccTextBlock Grid.Row="1" Grid.Column="0" Text="{DynamicResource popup_test_summary_maximum_absorbance_time}" Foreground="{StaticResource state_valid_color}" FontSize="20"/>
                        <lego:eccTextBox Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3" IsEnabled="False" Style="{StaticResource styleValue}" Height="60" FontSize="30" HorizontalContentAlignment="Center"
                                     Text="{Binding TestItem_TestSummary.MinTransmissionSecond}"/>
                        
                        <lego:eccTextBlock Grid.Row="2" Grid.Column="0" Text="{DynamicResource popup_test_summary_minimum_transmission}" Foreground="{StaticResource state_valid_color}" FontSize="20"/>
                        <lego:eccTextBox Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="3" IsEnabled="False" Style="{StaticResource styleValue}" Height="60" FontSize="30" HorizontalContentAlignment="Center"
                                     Text="{Binding TestItem_TestSummary.MinTransmission}"/>

                        <!--
                        <lego:eccTextBlock Grid.Row="3" Grid.Column="0" Text="{DynamicResource popup_test_summary_maximum_absorbance}" Foreground="{StaticResource state_valid_color}" FontSize="20"/>
                        <lego:eccTextBox Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="3" IsEnabled="False" Style="{StaticResource styleValue}" Height="60" FontSize="30" HorizontalContentAlignment="Center"
                                     Text="{Binding TestItem_TestSummary.MaxAbsorbance}"/>
                        -->

                    </Grid>
                </Border>
            </lego:eccGroupBox>

            <lego:eccGroupBox Grid.Row="2" Grid.RowSpan="2" Grid.Column="0" Grid.ColumnSpan="4" Tag="16" Header="{DynamicResource key_desc2}" Margin="5,3,5,3" VerticalAlignment="Top"
                              BorderBrush="{StaticResource groupbox_header_bg}" Background="{StaticResource popup_header_bg}">
                <lego:eccTextBox Height="200" AcceptsReturn="True" Style="{StaticResource styleValue}" Margin="5" VerticalAlignment="Top"
                                 HorizontalContentAlignment="Left" VerticalContentAlignment="Top"
                                 Text="{Binding TestItem_TestSummary.Description}" />
            </lego:eccGroupBox>
        </Grid>
    </DockPanel>
</bw:BaseIEC61034Popup>
