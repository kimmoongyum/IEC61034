<bw:BaseIEC61034Popup x:Class="FTSolutions.IEC61034.Runner.Popup.Popup_SmokeVentilation"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:sys="clr-namespace:System;assembly=mscorlib"
                      xmlns:d3="http://research.microsoft.com/DynamicDataDisplay/1.0"
                      xmlns:ini="clr-namespace:FTSolutions.IEC61034.Common.Setting;assembly=FTSolutions.IEC61034.Common"
                      xmlns:bw="clr-namespace:FTSolutions.IEC61034.Common.Base;assembly=FTSolutions.IEC61034.Common"                      
                      xmlns:lego="clr-namespace:eccFramework.SharedLib.Lego.Brick;assembly=eccFramework.SharedLib.Lego"
                      xmlns:conv="clr-namespace:FTSolutions.IEC61034.Common.Converter;assembly=FTSolutions.IEC61034.Common"  
                      xmlns:util="clr-namespace:FTSolutions.IEC61034.Runner.Popup.Utility"
                      AllowsTransparency="True" WindowStyle="None" ResizeMode="NoResize"
                      WindowStartupLocation="CenterScreen"
                      Title="{DynamicResource main_header}" Height="680" Width="600">
    <bw:BaseIEC61034Popup.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/eccFramework.SharedLib.Core;component/Styles/PopupBrushes.xaml"/>
                <ResourceDictionary Source="/FTSolutions.IEC61034.Runner;component/Styles/IEC61034Brushes.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <conv:ReverseBooleanConverter x:Key="reverseBooleanConverter" />
            <conv:BooleanToValidTextConverter x:Key="booleanToValidTextConverter" />
            <conv:BooleanToVisibilityConverter x:Key="booleanToVisibilityConverter" />
            <conv:BooleanToValidColorConverter x:Key="booleanToValidColorConverter" />

            <Style TargetType="lego:eccTextBlock">
                <Setter Property="FontSize" Value="14" />
                <Setter Property="VerticalAlignment" Value="Center" />
                <Setter Property="HorizontalAlignment" Value="Right" />
                <Setter Property="Margin" Value="0,0,10,0" />
            </Style>

            <Style x:Key="styleResultInfo" TargetType="lego:eccTextBlock">
                <Setter Property="Foreground" Value="{StaticResource state_action_color}" />
                <Setter Property="FontSize" Value="16" />
                <Setter Property="FontWeight" Value="Bold" />
                <Setter Property="VerticalAlignment" Value="Center" />
                <Setter Property="HorizontalAlignment" Value="Center" />
                <Setter Property="Margin" Value="3" />
            </Style>
            
            <Style TargetType="lego:eccTextBox">
                <Setter Property="FontSize" Value="14" />
                <Setter Property="VerticalAlignment" Value="Center" />
                <Setter Property="HorizontalAlignment" Value="Stretch" />
                <Setter Property="Height" Value="32" />
                <Setter Property="Margin" Value="2" />
                <Setter Property="Foreground" Value="{StaticResource popup_textbox_fg}" />
            </Style>

            <Style x:Key="styleRadio" TargetType="lego:eccRadioButton">
                <Setter Property="FontWeight" Value="Bold" />
                <Setter Property="FontSize" Value="14" />
                <Setter Property="Margin" Value="10,5" />
            </Style>

            <Style x:Key="styleValue" TargetType="lego:eccTextBox">
                <Setter Property="FontWeight" Value="Bold" />
                <Setter Property="FontSize" Value="18" />
                <Setter Property="VerticalAlignment" Value="Center" />
                <Setter Property="HorizontalAlignment" Value="Stretch" />
                <Setter Property="HorizontalContentAlignment" Value="Center" />
                <Setter Property="VerticalContentAlignment" Value="Center" />
                <Setter Property="TextMode" Value="Number" />
                <Setter Property="Width" Value="100" />
                <Setter Property="Height" Value="40" />
                <Setter Property="Margin" Value="10,1" />
                <Setter Property="IsReadOnly" Value="False" />
                <Setter Property="BorderBrush" Value="{StaticResource state_none_color}" />
                <Setter Property="Foreground" Value="{StaticResource state_valid_color}" />
            </Style>

            <Style x:Key="styleCheck" TargetType="lego:eccCheckBox">
                <Setter Property="FontWeight" Value="Bold" />
                <Setter Property="FontSize" Value="14" />
                <Setter Property="Margin" Value="10,4" />
            </Style>
        </ResourceDictionary>
    </bw:BaseIEC61034Popup.Resources>

    <DockPanel Background="{StaticResource popup_background}">
        <!-- HEADER -->
        <Border DockPanel.Dock="Top" Height="85" BorderThickness="1"
                BorderBrush="{StaticResource popup_header_bb}" Background="{StaticResource popup_header_bg}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="140"/>
                    <ColumnDefinition />
                    <ColumnDefinition Width="200"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" BorderThickness="1" Background="White" Margin="5,16">
                    <Image Source="pack://application:,,,/eccFramework.SharedLib.Core;component/Images/ftsolutions_logo.png" 
                           RenderOptions.BitmapScalingMode="HighQuality" SnapsToDevicePixels="True" Margin="5" HorizontalAlignment="Right" />
                </Border>

                <StackPanel Grid.Column="1" VerticalAlignment="Top" Margin="0,2,0,0">
                    <TextBlock FontSize="14" Text="{DynamicResource popup_smoke_ventilation_title}" Style="{StaticResource headerLabelTitleStyle}" />
                </StackPanel>
                
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Border Margin="10" BorderThickness="1" Background="{Binding SESSION_MANAGER.LogoBackground}">
                        <Image Source="{Binding SESSION_MANAGER.ClientLogoPath}" Margin="3" />
                    </Border>
                </StackPanel>
            </Grid>
        </Border>
        <!-- FOOTER -->
        <Border DockPanel.Dock="Bottom" Height="70" Padding="0,4,0,0" BorderThickness="1" 
                BorderBrush="{StaticResource popup_footer_bb}" Background="{StaticResource popup_footer_bg}">
            <DockPanel>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <ToggleButton x:Name="btnController" Background="Transparent" BorderThickness="0"
                                      Width="50" Margin="10,0,0,0"
                                      Style="{StaticResource SettingToggleButtonStyleKey}"
                                      ContentTemplate="{StaticResource SettingToggleButtonContentTemplateKey}"/>
                    <Popup IsOpen="{Binding ElementName=btnController, Path=IsChecked}"
                               PlacementTarget="{Binding ElementName=btnController}"
                               Placement="Right" StaysOpen="False" AllowsTransparency="True" HorizontalOffset="1" VerticalOffset="-3" >
                        <Border BorderBrush="#cF8c8c8c" BorderThickness="1" Background="#cF000000">
                            <util:UC_RemoteControl />
                        </Border>
                    </Popup>
                </StackPanel>
                <StackPanel IsEnabled="{Binding IsStopChecked}" Orientation="Horizontal" HorizontalAlignment="Right">
                    <lego:FancyButton Style="{StaticResource fancyButtonStyle}" Height="60"
                                      FuncType="Cancel" Title="{DynamicResource btn_close}" SubTitle="{DynamicResource btn_close_desc}"
                                      Command="{Binding CloseClick}" />
                </StackPanel>
            </DockPanel>
        </Border>
        <!-- BODY -->
        <Grid Margin="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="120"/>
                </Grid.RowDefinitions>

                <TabControl Grid.Row="0" Background="#2D2D30" BorderThickness="1" TabStripPlacement="Top" Margin="3"
                            ItemContainerStyle="{StaticResource chevronTabItemStyle}">
                    <lego:MainTabItem FontSize="12" Header="{DynamicResource popup_test_transmission}" Width="200" Height="50" Background="{StaticResource popup_header_bg}">
                        <d3:ChartPlotter Margin="5" LegendVisibility="Collapsed" LegendVisible="False" FontSize="10"
                                         Background="{StaticResource graph_dark_bg}" Foreground="{StaticResource graph_dark_fg}" BorderBrush="{StaticResource graph_dark_bb}">
                            <d3:LineGraph DataSource="{Binding SeriesTransmission.SeriesDataSource}" Stroke="{StaticResource dark_series_color_1}" StrokeThickness="1.5" />

                            <d3:VerticalAxisTitle Content="{DynamicResource key_transmission}" FontSize="12" FontWeight="Bold"/>
                            <d3:HorizontalAxisTitle Content="{DynamicResource key_time_s}" FontSize="12" FontWeight="Bold"/>
                        </d3:ChartPlotter>
                    </lego:MainTabItem>
                </TabControl>

                <Border Grid.Row="1" BorderBrush="DarkRed" BorderThickness="3,3,3,3" Background="#cF000000" Margin="4">
                    <Grid Margin="3" VerticalAlignment="Center">
                        <Grid.RowDefinitions>             
                            <RowDefinition Height="50"/>   
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <lego:eccTextBlock Grid.Row="0" Grid.Column="1" Text="{DynamicResource popup_control_panel_transmission}" Foreground="DarkOrange" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="5"/>
                        <lego:Segment3X2 Grid.Row="0" Grid.Column="2" Value="{Binding CurrentTransmission}"  Margin="4,2,4,2" HorizontalAlignment="Center"
                                             StateBrush="{StaticResource state_action_color}"/>
                    </Grid>
                </Border>
            </Grid>
            <StackPanel />
        </Grid>
    </DockPanel>
</bw:BaseIEC61034Popup>
