<UserControl x:Class="FTSolutions.IEC61034.Runner.Popup.Utility.UC_StepMotor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:lego="clr-namespace:eccFramework.SharedLib.Lego.Brick;assembly=eccFramework.SharedLib.Lego"
             xmlns:conv="clr-namespace:FTSolutions.IEC61034.Common.Converter;assembly=FTSolutions.IEC61034.Common"
             xmlns:local="clr-namespace:FTSolutions.IEC61034.Runner.Popup.Utility"
             Width="429" Height="429" RenderOptions.BitmapScalingMode="HighQuality" SnapsToDevicePixels="True">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/eccFramework.SharedLib.Core;component/Styles/PopupBrushes.xaml"/>
                <ResourceDictionary Source="/FTSolutions.IEC61034.Runner;component/Styles/IEC61034Brushes.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <conv:StepMotorConverter x:Key="stepMotorConverter" />

            <Style x:Key="styleStatus" TargetType="lego:BulletPushButton">
                <Setter Property="VerticalAlignment" Value="Center" />
                <Setter Property="HorizontalAlignment" Value="Center" />
                <Setter Property="FontSize" Value="16" />
                <Setter Property="FontWeight" Value="Bold" />
                <Setter Property="Width" Value="64" />
                <Setter Property="Height" Value="64" />
                <Setter Property="BorderBrush" Value="{StaticResource state_valid_color}" />
            </Style>

            <Style x:Key="styleLabelTitle" TargetType="lego:eccTextBlock">
                <Setter Property="Margin" Value="10,5" />
                <Setter Property="FontSize" Value="16" />
                <Setter Property="FontWeight" Value="Bold" />
                <Setter Property="VerticalAlignment" Value="Center" />
                <Setter Property="HorizontalAlignment" Value="Right" />
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>

    <DockPanel>
        <Border Background="Transparent">
            <Canvas Background="Transparent">
                <Image Source="/FTSolutions.IEC61034.Runner;component/Images/step_motor.png"
                       RenderOptions.BitmapScalingMode="HighQuality" SnapsToDevicePixels="True"/>

                <lego:BulletPushButton Canvas.Left="19" Canvas.Top="183" Content="{DynamicResource btn_test}" Style="{StaticResource styleStatus}" GroupName="grpFilter"
                                       IsChecked="{Binding DEVICE_MANAGER.DigitalInput.IsClearFilterOn, Mode=OneWay}"
                                       Command="{Binding ChangeFilter}" CommandParameter="CLEAR" />                
                
                <lego:BulletPushButton Canvas.Left="67" Canvas.Top="67" Content="{Binding SESSION_MANAGER.NDFilterCollection.FilterNo1.FILTER_NO}" Style="{StaticResource styleStatus}" GroupName="grpFilter"
                                       IsChecked="{Binding DEVICE_MANAGER.DigitalInput.IsNDFilter01On, Mode=OneWay}"
                                       Command="{Binding ChangeFilter}" CommandParameter="#1" />

                <lego:BulletPushButton Canvas.Left="183" Canvas.Top="19" Content="{Binding SESSION_MANAGER.NDFilterCollection.FilterNo2.FILTER_NO}" Style="{StaticResource styleStatus}" GroupName="grpFilter"
                                        IsChecked="{Binding DEVICE_MANAGER.DigitalInput.IsNDFilter02On, Mode=OneWay}"
                                       Command="{Binding ChangeFilter}" CommandParameter="#2" />

                <lego:BulletPushButton Canvas.Left="300" Canvas.Top="67" Content="{Binding SESSION_MANAGER.NDFilterCollection.FilterNo3.FILTER_NO}" Style="{StaticResource styleStatus}" GroupName="grpFilter"
                                       IsChecked="{Binding DEVICE_MANAGER.DigitalInput.IsNDFilter03On, Mode=OneWay}"
                                       Command="{Binding ChangeFilter}" CommandParameter="#3" />

                <lego:BulletPushButton Canvas.Left="348" Canvas.Top="184" Content="{Binding SESSION_MANAGER.NDFilterCollection.FilterNo4.FILTER_NO}" Style="{StaticResource styleStatus}" GroupName="grpFilter"
                                        IsChecked="{Binding DEVICE_MANAGER.DigitalInput.IsNDFilter05On, Mode=OneWay}"
                                       Command="{Binding ChangeFilter}" CommandParameter="#4" />

                <lego:BulletPushButton Canvas.Left="300" Canvas.Top="300" Content="{Binding SESSION_MANAGER.NDFilterCollection.FilterNo5.FILTER_NO}" Style="{StaticResource styleStatus}" GroupName="grpFilter"
                                        IsChecked="{Binding DEVICE_MANAGER.DigitalInput.IsNDFilter07On, Mode=OneWay}"
                                       Command="{Binding ChangeFilter}" CommandParameter="#5" />

                <lego:BulletPushButton Canvas.Left="183" Canvas.Top="348" Content="{Binding SESSION_MANAGER.NDFilterCollection.FilterNo6.FILTER_NO}" Style="{StaticResource styleStatus}" GroupName="grpFilter"
                                        IsChecked="{Binding DEVICE_MANAGER.DigitalInput.IsNDFilter10On, Mode=OneWay}"
                                       Command="{Binding ChangeFilter}" CommandParameter="#6" />

                <lego:BulletPushButton Canvas.Left="67" Canvas.Top="300" Content="{DynamicResource key_dark}" Style="{StaticResource styleStatus}" GroupName="grpFilter"
                                      IsChecked="{Binding DEVICE_MANAGER.DigitalInput.IsDarkFilterOn, Mode=OneWay}"
                                       Command="{Binding ChangeFilter}" CommandParameter="DARK" />

                <StackPanel Canvas.Left="140" Canvas.Top="130">
                    <lego:eccTextBlock Text="{DynamicResource key_transmission}" Style="{StaticResource styleLabelTitle}" HorizontalAlignment="Center" />
                    <lego:Segment3X2 Value="{Binding DEVICE_MANAGER.AnalogInput.Transmission}" Height="45" Margin="2" HorizontalAlignment="Center"
                                     StateBrush="{StaticResource state_action_color}"/>
                </StackPanel>

                <lego:eccButton Canvas.Left="145" Canvas.Top="222" Content="{DynamicResource key_measure}" FontSize="16" Width="140" Height="60"
                                Command="{Binding MeasureCommand}"/>
            </Canvas>
        </Border>
    </DockPanel>
</UserControl>
