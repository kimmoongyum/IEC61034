<bw:BaseIEC61034Popup x:Class="FTSolutions.IEC61034.Runner.Popup.Utility.Popup_New_Registration"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:sys="clr-namespace:System;assembly=mscorlib"
                      xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
                      xmlns:ini="clr-namespace:FTSolutions.IEC61034.Common.Setting;assembly=FTSolutions.IEC61034.Common"
                      xmlns:bw="clr-namespace:FTSolutions.IEC61034.Common.Base;assembly=FTSolutions.IEC61034.Common"
                      xmlns:lego="clr-namespace:eccFramework.SharedLib.Lego.Brick;assembly=eccFramework.SharedLib.Lego"
                      xmlns:conv="clr-namespace:FTSolutions.IEC61034.Common.Converter;assembly=FTSolutions.IEC61034.Common"
                      AllowsTransparency="True" WindowStyle="None" ResizeMode="NoResize"
                      WindowStartupLocation="CenterScreen"
                      Title="{DynamicResource main_header}" Height="1020" Width="1080">
    <bw:BaseIEC61034Popup.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/eccFramework.SharedLib.Core;component/Styles/PopupBrushes.xaml"/>
                <ResourceDictionary Source="/FTSolutions.IEC61034.Runner;component/Styles/IEC61034Brushes.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <conv:RegNoSpliterConverter x:Key="regNoSpliterConverter" />
            <conv:ReverseBooleanConverter x:Key="reverseBooleanConverter" />
            <conv:BooleanToVisibilityConverter x:Key="booleanToVisibilityConverter" />
            <conv:BooleanToReverseVisibilityConverter x:Key="booleanToReverseVisibilityConverter" />
            
            <Style x:Key="styleLabel" TargetType="lego:eccTextBlock">
                <Setter Property="Margin" Value="4" />
                <Setter Property="HorizontalAlignment" Value="Right" />
                <Setter Property="VerticalAlignment" Value="Center" />
                <Setter Property="FontSize" Value="14" />
            </Style>

            <Style x:Key="styleAnnexLabel" TargetType="lego:eccTextBlock">
                <Setter Property="Margin" Value="4" />
                <Setter Property="HorizontalAlignment" Value="Center" />
                <Setter Property="VerticalAlignment" Value="Center" />
                <Setter Property="FontSize" Value="14" />
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="FontWeight" Value="Bold"/>
            </Style>

            <Style x:Key="styleValue" TargetType="lego:eccTextBox">
                <Setter Property="FontWeight" Value="Bold" />
                <Setter Property="FontSize" Value="18" />
                <Setter Property="VerticalAlignment" Value="Center" />
                <Setter Property="HorizontalAlignment" Value="Stretch" />
                <Setter Property="HorizontalContentAlignment" Value="Center" />
                <Setter Property="VerticalContentAlignment" Value="Center" />
                <Setter Property="Height" Value="34" />
                <Setter Property="Margin" Value="10,1" />
                <Setter Property="IsReadOnly" Value="False" />
                <Setter Property="BorderBrush" Value="{StaticResource state_none_color}" />
                <Setter Property="Foreground" Value="{StaticResource state_valid_color}" />
            </Style>

            <Style x:Key="styleRadio" TargetType="lego:eccRadioButton">
                <Setter Property="FontWeight" Value="Bold" />
                <Setter Property="FontSize" Value="14" />
                <Setter Property="Margin" Value="10,4" />
            </Style>

            <Style x:Key="styleCheck" TargetType="lego:eccCheckBox">
                <Setter Property="FontWeight" Value="Bold" />
                <Setter Property="FontSize" Value="14" />
                <Setter Property="Margin" Value="10,4" />
            </Style>
        </ResourceDictionary>
    </bw:BaseIEC61034Popup.Resources>

    <DockPanel Background="{StaticResource popup_background}">
        <!-- HEADER -->
        <Border DockPanel.Dock="Top" Height="85" BorderThickness="1"
                BorderBrush="{StaticResource popup_header_bb}" Background="{StaticResource popup_header_bg}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="140"/>
                    <ColumnDefinition />
                    <ColumnDefinition Width="200"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" BorderThickness="1" Background="White" Margin="5,16">
                    <Image Source="pack://application:,,,/eccFramework.SharedLib.Core;component/Images/ftsolutions_logo.png" 
                           RenderOptions.BitmapScalingMode="HighQuality" SnapsToDevicePixels="True" Margin="5" HorizontalAlignment="Right" />
                </Border>

                <StackPanel Grid.Column="1" VerticalAlignment="Top" Margin="0,10,0,0">
                    <TextBlock FontSize="20" Text="{DynamicResource popup_new_registration_title}" Style="{StaticResource headerLabelTitleStyle}" />
                </StackPanel>

                <Border Grid.Column="2" Margin="5" BorderThickness="1" Background="{Binding SESSION_MANAGER.LogoBackground}">
                    <Image Source="{Binding SESSION_MANAGER.ClientLogoPath}" Margin="3" />
                </Border>
            </Grid>
        </Border>
        <!-- FOOTER -->
        <Border DockPanel.Dock="Bottom" Height="70" Padding="0,4,0,0" BorderThickness="1" 
                BorderBrush="{StaticResource popup_footer_bb}" Background="{StaticResource popup_footer_bg}">
            <DockPanel HorizontalAlignment="Stretch" VerticalAlignment="Center">
                <lego:FancyButton DockPanel.Dock="Left" Style="{StaticResource fancyButtonStyle}"
                                  FuncType="Delete" Title="{DynamicResource btn_delete}" Margin="10,0,0,0" SubTitle="{DynamicResource btn_delete_desc}"
                                  Click="Delete_Click"/>

                <lego:FancyButton DockPanel.Dock="Right" Style="{StaticResource fancyButtonStyle}"
                                  FuncType="Cancel" Title="{DynamicResource btn_cancel}" SubTitle="{DynamicResource btn_cancel_desc}"
                                  Click="Cancel_Click" />

                <lego:FancyButton DockPanel.Dock="Right" Style="{StaticResource fancyButtonStyle}"
                                  FuncType="Save" Title="{DynamicResource btn_save}" SubTitle="{DynamicResource btn_save_desc}"
                                  IsEnabled="{Binding AllowSave}"
                                  Click="Apply_Click"/>

                <StackPanel />
            </DockPanel>
        </Border>
        <!-- BODY -->
        <Grid Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="45"/>
                <RowDefinition Height="100"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="130"/>
                <RowDefinition Height="260"/>
                <RowDefinition Height="250"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="400"/>
                <ColumnDefinition Width="350"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="220"/>
                </Grid.ColumnDefinitions>

                <lego:eccTextBlock Grid.Column="0" Text="{DynamicResource key_reg_no2}" FontSize="16" Style="{StaticResource styleLabel}" HorizontalAlignment="Right"/>
                <lego:eccTextBox Grid.Column="1" HorizontalContentAlignment="Center" IsEnabled="False" Style="{StaticResource styleValue}" Margin="10,0"
                                 Text="{Binding RegistrationInfo.REG_NO}" />

                <lego:eccTextBlock Grid.Column="2" Text="{DynamicResource key_cust_no}" FontSize="16" Style="{StaticResource styleLabel}" HorizontalAlignment="Right"/>
                <lego:eccTextBox Grid.Column="3" HorizontalContentAlignment="Center" Style="{StaticResource styleValue}" Margin="10,0"
                                 Text="{Binding RegistrationInfo.CUST_NO}" />
            </Grid>

            <lego:eccGroupBox Grid.Row="1" Grid.RowSpan="2" Grid.Column="0" Tag="16" Header="{DynamicResource popup_new_registration_sponsor}" Margin="5,3,5,3"
                              BorderBrush="{StaticResource groupbox_header_bg}" Background="{StaticResource popup_header_bg}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <lego:eccTextBlock Grid.Row="0" Grid.Column="0" Text="{DynamicResource key_name}" Style="{StaticResource styleLabel}" />
                    <lego:eccTextBox Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" Style="{StaticResource styleValue}" HorizontalContentAlignment="Left"
                                     Text="{Binding RegistrationInfo.SPONSOR_NAME}" />

                    <lego:eccTextBlock Grid.Row="1" Grid.Column="0" Text="{DynamicResource key_address}" Style="{StaticResource styleLabel}" />
                    <lego:eccTextBox Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" Style="{StaticResource styleValue}" HorizontalContentAlignment="Left"
                                     Text="{Binding RegistrationInfo.SPONSOR_ADDR}" />
                </Grid>
            </lego:eccGroupBox>

            <lego:eccGroupBox Grid.Row="3" Grid.Column="0" Tag="16" Header="{DynamicResource key_manufacture_supplier}" Margin="5,3,5,3"
                              BorderBrush="{StaticResource groupbox_header_bg}" Background="{StaticResource popup_header_bg}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <lego:eccTextBlock Grid.Row="0" Grid.Column="0" Text="{DynamicResource key_name}" Style="{StaticResource styleLabel}" />
                    <lego:eccTextBox Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" Style="{StaticResource styleValue}" HorizontalContentAlignment="Left"
                                     Text="{Binding RegistrationInfo.SUPPLIER_NAME}" />

                    <lego:eccTextBlock Grid.Row="1" Grid.Column="0" Text="{DynamicResource key_address}" Style="{StaticResource styleLabel}" />
                    <lego:eccTextBox Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" Style="{StaticResource styleValue}" HorizontalContentAlignment="Left"
                                     Text="{Binding RegistrationInfo.SUPPLIER_ADDR}" />
                </Grid>
            </lego:eccGroupBox>

            <lego:eccGroupBox Grid.Row="4" Grid.Column="0" Tag="16" Header="{DynamicResource popup_new_registration_product_info}" Margin="5,3,5,3"
                              BorderBrush="{StaticResource groupbox_header_bg}" Background="{StaticResource popup_header_bg}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <lego:eccTextBlock Grid.Row="0" Grid.Column="0" Text="{DynamicResource key_name}" Style="{StaticResource styleLabel}" />
                    <lego:eccTextBox Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" Style="{StaticResource styleValue}" HorizontalContentAlignment="Left"
                                     Text="{Binding RegistrationInfo.PRODUCT_NAME}" />

                    <StackPanel Grid.Row="1" Grid.Column="0">
                        <lego:eccTextBlock Text="{DynamicResource key_desc2}" Style="{StaticResource styleLabel}" />
                    </StackPanel>
                    <lego:eccTextBox Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" Height="160" Style="{StaticResource styleValue}" AcceptsReturn="True" VerticalContentAlignment="Top" HorizontalContentAlignment="Left"
                                     Text="{Binding RegistrationInfo.PRODUCT_DESC}" />
                </Grid>
            </lego:eccGroupBox>

            <lego:eccGroupBox Grid.Row="5" Grid.Column="0" Tag="16" Header="{DynamicResource popup_new_registration_test_info}" Margin="5,3,5,3"
                              BorderBrush="{StaticResource groupbox_header_bg}" Background="{StaticResource popup_header_bg}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="160"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <lego:eccTextBlock Grid.Row="0" Grid.Column="0" Text="{DynamicResource key_operator}" Style="{StaticResource styleLabel}" />
                    <lego:eccTextBox Grid.Row="0" Grid.Column="1" Style="{StaticResource styleValue}"
                                     Text="{Binding RegistrationInfo.OPERATOR_NAME}" />

                    <lego:eccTextBlock Grid.Row="1" Grid.Column="0" Text="{DynamicResource key_manager}" Style="{StaticResource styleLabel}" />
                    <lego:eccTextBox Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" Style="{StaticResource styleValue}"
                                     Text="{Binding RegistrationInfo.MANAGER_NAME}" />

                    <lego:eccCheckBox Grid.Row="2" Grid.Column="1" x:Name="chkCondition" Content="{DynamicResource popup_test_prop_conditions}" VerticalAlignment="Center" Padding="10,0,0,0" Margin="10,0,0,0"
                                      IsChecked="{Binding RegistrationInfo.USE_SPECIMEN_CONDITION}"/>

                    <lego:eccTextBlock Grid.Row="3" Grid.Column="0" Text="{DynamicResource key_temperature}" Style="{StaticResource styleLabel}" />
                    <lego:eccTextBox Grid.Row="3" Grid.Column="1" TextMode="Decimal" FontSize="20" HorizontalContentAlignment="Center" VerticalAlignment="Center" 
                                     Text="{Binding RegistrationInfo.CONDITION_TEMPERATURE}" Style="{StaticResource styleValue}"
                                     IsReadOnly="{Binding Path=IsChecked, ElementName=chkCondition, Converter={StaticResource reverseBooleanConverter}}" />

                    <lego:eccTextBlock Grid.Row="4" Grid.Column="0" Text="{DynamicResource key_humidity}" Style="{StaticResource styleLabel}" />
                    <lego:eccTextBox Grid.Row="4" Grid.Column="1" TextMode="Decimal" FontSize="20" HorizontalContentAlignment="Center" VerticalAlignment="Center" 
                                     Text="{Binding RegistrationInfo.CONDITION_HUMIDITY}" Style="{StaticResource styleValue}"
                                     IsReadOnly="{Binding Path=IsChecked, ElementName=chkCondition, Converter={StaticResource reverseBooleanConverter}}" />
                </Grid>
            </lego:eccGroupBox>

            <DockPanel Grid.Row="1" Grid.RowSpan="4" Grid.Column="1">
                <lego:eccGroupBox Tag="16" Header="{StaticResource popup_new_registration_cable_type}" Margin="5,3,5,3"
                                  BorderBrush="{StaticResource groupbox_header_bg}" Background="{StaticResource popup_header_bg}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="45"/>
                            <RowDefinition Height="45"/>
                            <RowDefinition Height="45"/>
                            <RowDefinition Height="45"/>
                            <lego:CollapsibleRowDefinition Height="60" Collapsed="{Binding IsCableRound, Converter={StaticResource reverseBooleanConverter}}"/>
                            <lego:CollapsibleRowDefinition Height="60" Collapsed="{Binding IsCableFlat, Converter={StaticResource reverseBooleanConverter}}"/>
                            <RowDefinition Height="45"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3*"/>
                            <ColumnDefinition Width="4*"/>
                            <ColumnDefinition Width="3*"/>
                        </Grid.ColumnDefinitions>

                        <lego:eccRadioButton Grid.Row="0" Grid.Column="0" Content="Round" GroupName="grpCable" Style="{StaticResource styleRadio}" Width="Auto" VerticalAlignment="Center"
                                                 IsChecked="{Binding IsCableRound}" />
                        <lego:eccRadioButton Grid.Row="1" Grid.Column="0" Content="Flat" GroupName="grpCable" Style="{StaticResource styleRadio}" Width="Auto" VerticalAlignment="Center"
                                                 IsChecked="{Binding IsCableFlat}" />

                        <lego:eccTextBlock Grid.Row="0" Grid.Column="1" Text="{DynamicResource popup_new_registration_cable_diameter}" Style="{StaticResource styleLabel}" />
                        <lego:eccTextBox Grid.Row="0" Grid.Column="2" Style="{StaticResource styleValue}" TextMode="Decimal" Margin="10,0,10,0"
                                                 Text="{Binding RoundCableDiameter}" x:Name="setRoundDiameter" IsEnabled="{Binding IsCableRound}" PreviewTextInput="setCable_PreviewTextInput"/>

                        <lego:eccTextBlock Grid.Row="1" Grid.Column="1" Text="{DynamicResource popup_new_registration_cable_minor_axis}" Style="{StaticResource styleLabel}" />
                        <lego:eccTextBox Grid.Row="1" Grid.Column="2" Style="{StaticResource styleValue}" Margin="10,0,10,0" TextMode="Decimal" 
                                                 Text="{Binding RegistrationInfo.CABLE_MINOR_AXIS}" IsEnabled="{Binding IsCableFlat}" PreviewTextInput="setCable_PreviewTextInput"/>
                        <lego:eccTextBlock Grid.Row="2" Grid.Column="1" Text="{DynamicResource popup_new_registration_cable_major_axis}" Style="{StaticResource styleLabel}" />
                        <lego:eccTextBox Grid.Row="2" Grid.Column="2" Style="{StaticResource styleValue}" Margin="10,0,10,0" TextMode="Decimal" 
                                                 Text="{Binding RegistrationInfo.CABLE_MAJOR_AXIS}" IsEnabled="{Binding IsCableFlat}" PreviewTextInput="setCable_PreviewTextInput"/>
                        <lego:eccTextBlock Grid.Row="3" Grid.Column="1" Text="{DynamicResource popup_new_registration_cable_diameter}" Style="{StaticResource styleLabel}" />
                        <lego:eccTextBox Grid.Row="3" Grid.Column="2" Style="{StaticResource styleValue}" TextMode="Decimal" Margin="10,0,10,0"
                                                 Text="{Binding FlatCableDiameter}" x:Name="setFlatDiameter" IsEnabled="False" />

                        <lego:RectActionButton Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="3" Content="{DynamicResource btn_calculate}" Width="120" Height="40" FontSize="12" Margin="10"
                                                   Command="{Binding CalculateCableCountCommand}" CommandParameter="{Binding ElementName=setRoundDiameter, Path=Text}"
                                                   BorderBrush="{StaticResource state_action_color}"/>
                        <lego:RectActionButton Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="3" Content="{DynamicResource btn_calculate}" Width="120" Height="40" FontSize="12" Margin="10"
                                                   Command="{Binding CalculateCableCountCommand}" CommandParameter="{Binding ElementName=setFlatDiameter, Path=Text}"
                                                   BorderBrush="{StaticResource state_action_color}"/>

                        <lego:eccTextBlock Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2" Text="{DynamicResource popup_new_registration_test_pieces}" Style="{StaticResource styleLabel}" />
                        <lego:eccTextBox Grid.Row="6" Grid.Column="2" Style="{StaticResource styleValue}" TextMode="Number"  Margin="10,0,10,0"
                                                 Text="{Binding RegistrationInfo.TEST_PIECES_COUNT}" IsEnabled="{Binding IsCustom}" />
                    </Grid>
                </lego:eccGroupBox>
            </DockPanel>

            <DockPanel Grid.Row="1" Grid.RowSpan="4" Grid.Column="2">
                <lego:eccGroupBox Tag="16" Header="{StaticResource popup_new_registration_test_pieces}" Margin="5,3,5,3"
                                  BorderBrush="{StaticResource groupbox_header_bg}" Background="{StaticResource popup_header_bg}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="45"/>
                            <RowDefinition Height="45"/>
                            <RowDefinition Height="45"/>
                            <RowDefinition Height="45"/>
                            <lego:CollapsibleRowDefinition Height="45" Collapsed="{Binding IsCableRound, Converter={StaticResource reverseBooleanConverter}}"/>
                            <lego:CollapsibleRowDefinition Height="45" Collapsed="{Binding IsCableRound, Converter={StaticResource reverseBooleanConverter}}"/>
                            <lego:CollapsibleRowDefinition Height="45" Collapsed="{Binding IsCableFlat, Converter={StaticResource reverseBooleanConverter}}"/>
                            <lego:CollapsibleRowDefinition Height="45" Collapsed="{Binding IsCableRound, Converter={StaticResource reverseBooleanConverter}}"/>
                            <lego:CollapsibleRowDefinition Height="30" Collapsed="{Binding IsCableFlat, Converter={StaticResource reverseBooleanConverter}}"/>
                            <lego:CollapsibleRowDefinition Height="30" Collapsed="{Binding IsCableFlat, Converter={StaticResource reverseBooleanConverter}}"/>
                            <lego:CollapsibleRowDefinition Height="30" Collapsed="{Binding IsCableFlat, Converter={StaticResource reverseBooleanConverter}}"/>
                            <lego:CollapsibleRowDefinition Height="30" Collapsed="{Binding IsCableFlat, Converter={StaticResource reverseBooleanConverter}}"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="4*"/>
                            <ColumnDefinition Width="3*"/>
                            <ColumnDefinition Width="3*"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Row="0" Grid.Column="0" BorderBrush="White" BorderThickness="1,1,0,0"/>
                        <lego:eccTextBlock Grid.Row="0" Grid.Column="0" Text="{DynamicResource popup_new_registration_diameter}" Style="{StaticResource styleAnnexLabel}"/>
                        <Border Grid.Row="0" Grid.Column="1" BorderBrush="White" BorderThickness="1,1,1,0"/>
                        <lego:eccTextBlock Grid.Row="0" Grid.Column="1" Text="{DynamicResource popup_new_registration_cables}" Style="{StaticResource styleAnnexLabel}"/>
                        <Border Grid.Row="0" Grid.Column="2" BorderBrush="White" BorderThickness="0,1,1,0"/>
                        <lego:eccTextBlock Grid.Row="0" Grid.Column="2" Text="{DynamicResource popup_new_registration_bundles}" Style="{StaticResource styleAnnexLabel}"/>

                        <!-- Row 1 -->
                        <Border Grid.Row="1" Grid.Column="0" BorderBrush="White" BorderThickness="1,1,0,0"/>
                        <lego:eccTextBlock Grid.Row="1" Grid.Column="0" Text="{DynamicResource popup_new_registration_cables_40_over}" Style="{StaticResource styleAnnexLabel}"/>
                        <Border Grid.Row="1" Grid.Column="1" BorderBrush="White" BorderThickness="1,1,1,0"/>
                        <lego:eccTextBlock Grid.Row="1" Grid.Column="1" Text="1" Style="{StaticResource styleAnnexLabel}"/>
                        <Border Grid.Row="1" Grid.Column="2" BorderBrush="White" BorderThickness="0,1,1,0"/>
                        <lego:eccTextBlock Grid.Row="1" Grid.Column="2" Text="0" Style="{StaticResource styleAnnexLabel}"/>

                        <!-- Row 2 -->
                        <Border Grid.Row="2" Grid.Column="0" BorderBrush="White" BorderThickness="1,1,0,0"/>
                        <lego:eccTextBlock Grid.Row="2" Grid.Column="0" Text="{DynamicResource popup_new_registration_cables_20to40}" Style="{StaticResource styleAnnexLabel}"/>
                        <Border Grid.Row="2" Grid.Column="1" BorderBrush="White" BorderThickness="1,1,1,0"/>
                        <lego:eccTextBlock Grid.Row="2" Grid.Column="1" Text="2" Style="{StaticResource styleAnnexLabel}"/>
                        <Border Grid.Row="2" Grid.Column="2" BorderBrush="White" BorderThickness="0,1,1,0"/>
                        <lego:eccTextBlock Grid.Row="2" Grid.Column="2" Text="0" Style="{StaticResource styleAnnexLabel}"/>

                        <!-- Row 3 -->
                        <Border Grid.Row="3" Grid.Column="0" BorderBrush="White" BorderThickness="1,1,0,0"/>
                        <lego:eccTextBlock Grid.Row="3" Grid.Column="0" Text="{DynamicResource popup_new_registration_cables_10to20}" Style="{StaticResource styleAnnexLabel}"/>
                        <Border Grid.Row="3" Grid.Column="1" BorderBrush="White" BorderThickness="1,1,1,0"/>
                        <lego:eccTextBlock Grid.Row="3" Grid.Column="1" Text="3" Style="{StaticResource styleAnnexLabel}"/>
                        <Border Grid.Row="3" Grid.Column="2" BorderBrush="White" BorderThickness="0,1,1,0"/>
                        <lego:eccTextBlock Grid.Row="3" Grid.Column="2" Text="0" Style="{StaticResource styleAnnexLabel}"/>

                        <!-- Row 4 (Round) -->
                        <Border Grid.Row="4" Grid.Column="0" BorderBrush="White" BorderThickness="1,1,0,0"/>
                        <lego:eccTextBlock Grid.Row="4" Grid.Column="0" Text="{DynamicResource popup_new_registration_cables_5to10}" Style="{StaticResource styleAnnexLabel}"/>
                        <Border Grid.Row="4" Grid.Column="1" BorderBrush="White" BorderThickness="1,1,1,0"/>
                        <lego:eccTextBlock Grid.Row="4" Grid.Column="1" Text="45/D" Style="{StaticResource styleAnnexLabel}"/>
                        <Border Grid.Row="4" Grid.Column="2" BorderBrush="White" BorderThickness="0,1,1,0"/>
                        <lego:eccTextBlock Grid.Row="4" Grid.Column="2" Text="0" Style="{StaticResource styleAnnexLabel}"/>

                        <!-- Row 5 (Round)-->
                        <Border Grid.Row="5" Grid.Column="0" BorderBrush="White" BorderThickness="1,1,0,1"/>
                        <lego:eccTextBlock Grid.Row="5" Grid.Column="0" Text="{DynamicResource popup_new_registration_cables_1to5}" Style="{StaticResource styleAnnexLabel}"/>
                        <Border Grid.Row="5" Grid.Column="1" BorderBrush="White" BorderThickness="1,1,1,1"/>
                        <lego:eccTextBlock Grid.Row="5" Grid.Column="1" Text="" Style="{StaticResource styleAnnexLabel}"/>
                        <Border Grid.Row="5" Grid.Column="2" BorderBrush="White" BorderThickness="0,1,1,1"/>
                        <lego:eccTextBlock Grid.Row="5" Grid.Column="2" Text="45/3D" Style="{StaticResource styleAnnexLabel}"/>

                        <!-- Row 6 (Flat) -->
                        <Border Grid.Row="6" Grid.Column="0" BorderBrush="White" BorderThickness="1,1,0,1"/>
                        <lego:eccTextBlock Grid.Row="6" Grid.Column="0" Text="{DynamicResource popup_new_registration_cables_1to10}" Style="{StaticResource styleAnnexLabel}"/>
                        <Border Grid.Row="6" Grid.Column="1" BorderBrush="White" BorderThickness="1,1,1,1"/>
                        <lego:eccTextBlock Grid.Row="6" Grid.Column="1" Text="45/D" Style="{StaticResource styleAnnexLabel}"/>
                        <Border Grid.Row="6" Grid.Column="2" BorderBrush="White" BorderThickness="0,1,1,1"/>
                        <lego:eccTextBlock Grid.Row="6" Grid.Column="2" Text="0" Style="{StaticResource styleAnnexLabel}"/>

                        <lego:eccTextBlock Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="3" Text="{DynamicResource popup_new_registration_cables_annex}" Style="{StaticResource styleAnnexLabel}" HorizontalAlignment="Left"/>

                        <lego:eccTextBlock Grid.Row="8" Grid.Column="0" Grid.ColumnSpan="3" Text="{DynamicResource popup_new_registration_flat_annex0}" Style="{StaticResource styleAnnexLabel}" HorizontalAlignment="Left"/>
                        <lego:eccTextBlock Grid.Row="9" Grid.Column="0" Grid.ColumnSpan="3" Text="{DynamicResource popup_new_registration_flat_annex1}" Style="{StaticResource styleAnnexLabel}" HorizontalAlignment="Center"/>
                        <lego:eccTextBlock Grid.Row="10" Grid.Column="0" Grid.ColumnSpan="3" Text="{DynamicResource popup_new_registration_flat_annex2}" Style="{StaticResource styleAnnexLabel}" HorizontalAlignment="Left"/>
                        <lego:eccTextBlock Grid.Row="11" Grid.Column="0" Grid.ColumnSpan="3" Text="{DynamicResource popup_new_registration_flat_annex3}" Style="{StaticResource styleAnnexLabel}" HorizontalAlignment="Center"/>
                    </Grid>
                </lego:eccGroupBox>
            </DockPanel>
            <!--
            <DockPanel Grid.Row="2" Grid.RowSpan="3" Grid.Column="1">
                <lego:eccGroupBox Tag="16" Header="{StaticResource popup_new_registration_condition}" Margin="5,3,5,3"
                                  BorderBrush="{StaticResource groupbox_header_bg}" Background="{StaticResource popup_header_bg}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="40"/>
                            <RowDefinition Height="40"/>
                            <RowDefinition Height="40"/>
                            <lego:CollapsibleRowDefinition Height="160" Collapsed="{Binding IsCableRound, Converter={StaticResource reverseBooleanConverter}}"/>
