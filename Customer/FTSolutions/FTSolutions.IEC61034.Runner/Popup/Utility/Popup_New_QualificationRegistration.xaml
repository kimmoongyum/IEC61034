<bw:BaseIEC61034Popup x:Class="FTSolutions.IEC61034.Runner.Popup.Utility.Popup_New_QualificationRegistration"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:sys="clr-namespace:System;assembly=mscorlib"
                      xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
                      xmlns:ini="clr-namespace:FTSolutions.IEC61034.Common.Setting;assembly=FTSolutions.IEC61034.Common"
                      xmlns:bw="clr-namespace:FTSolutions.IEC61034.Common.Base;assembly=FTSolutions.IEC61034.Common"
                      xmlns:lego="clr-namespace:eccFramework.SharedLib.Lego.Brick;assembly=eccFramework.SharedLib.Lego"
                      xmlns:conv="clr-namespace:FTSolutions.IEC61034.Common.Converter;assembly=FTSolutions.IEC61034.Common"
                      AllowsTransparency="True" WindowStyle="None" ResizeMode="NoResize"
                      WindowStartupLocation="CenterScreen"
                      Title="{DynamicResource main_header}" Height="580" Width="650">
    <bw:BaseIEC61034Popup.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/eccFramework.SharedLib.Core;component/Styles/PopupBrushes.xaml"/>
                <ResourceDictionary Source="/FTSolutions.IEC61034.Runner;component/Styles/IEC61034Brushes.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <conv:RegNoSpliterConverter x:Key="regNoSpliterConverter" />
            <conv:ReverseBooleanConverter x:Key="reverseBooleanConverter" />
            <conv:BooleanToVisibilityConverter x:Key="booleanToVisibilityConverter" />
            <conv:BooleanToReverseVisibilityConverter x:Key="booleanToReverseVisibilityConverter" />

            <Style x:Key="styleLabel" TargetType="lego:eccTextBlock">
                <Setter Property="Margin" Value="4" />
                <Setter Property="HorizontalAlignment" Value="Right" />
                <Setter Property="VerticalAlignment" Value="Center" />
                <Setter Property="FontSize" Value="14" />
            </Style>

            <Style x:Key="styleStandardLabel" TargetType="lego:eccTextBlock">
                <Setter Property="Margin" Value="4" />
                <Setter Property="HorizontalAlignment" Value="Center" />
                <Setter Property="VerticalAlignment" Value="Center" />
                <Setter Property="FontSize" Value="20" />
                <Setter Property="FontWeight" Value="Bold"/>
            </Style>

            <Style x:Key="styleRegistrationValue" TargetType="lego:eccTextBox">
                <Setter Property="FontSize" Value="14" />
                <Setter Property="FontWeight" Value="Bold" />
                <Setter Property="VerticalAlignment" Value="Center" />
                <Setter Property="HorizontalAlignment" Value="Stretch" />
                <Setter Property="HorizontalContentAlignment" Value="Center" />
                <Setter Property="VerticalContentAlignment" Value="Center" />
                <Setter Property="Height" Value="34" />
                <Setter Property="Margin" Value="5,1" />
                <Setter Property="IsReadOnly" Value="True" />
                <Setter Property="Background" Value="White" />
                <Setter Property="BorderBrush" Value="{StaticResource state_dark_color}" />
                <Setter Property="Foreground" Value="White" />
            </Style>

            <Style x:Key="styleValue" TargetType="lego:eccTextBox">
                <Setter Property="FontWeight" Value="Bold" />
                <Setter Property="FontSize" Value="18" />
                <Setter Property="VerticalAlignment" Value="Center" />
                <Setter Property="HorizontalAlignment" Value="Stretch" />
                <Setter Property="HorizontalContentAlignment" Value="Center" />
                <Setter Property="VerticalContentAlignment" Value="Center" />
                <Setter Property="Height" Value="34" />
                <Setter Property="Margin" Value="10,1" />
                <Setter Property="IsReadOnly" Value="False" />
                <Setter Property="BorderBrush" Value="{StaticResource state_none_color}" />
                <Setter Property="Foreground" Value="{StaticResource state_valid_color}" />
            </Style>

            <Style x:Key="styleRadio" TargetType="lego:eccRadioButton">
                <Setter Property="FontWeight" Value="Bold" />
                <Setter Property="FontSize" Value="14" />
                <Setter Property="Margin" Value="10,4" />
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="Width" Value="Auto"/>
            </Style>

            <Style x:Key="styleCheck" TargetType="lego:eccCheckBox">
                <Setter Property="FontWeight" Value="Bold" />
                <Setter Property="FontSize" Value="14" />
                <Setter Property="Margin" Value="10,4" />
            </Style>
        </ResourceDictionary>
    </bw:BaseIEC61034Popup.Resources>

    <DockPanel Background="{StaticResource popup_background}">
        <!-- HEADER -->
        <Border DockPanel.Dock="Top" Height="85" BorderThickness="1"
                BorderBrush="{StaticResource popup_header_bb}" Background="{StaticResource popup_header_bg}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="140"/>                    
                    <ColumnDefinition />
                    <ColumnDefinition Width="200"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" BorderThickness="1" Background="White" Margin="5,16">
                    <Image Source="pack://application:,,,/eccFramework.SharedLib.Core;component/Images/ftsolutions_logo.png" 
                           RenderOptions.BitmapScalingMode="HighQuality" SnapsToDevicePixels="True" Margin="5" HorizontalAlignment="Right" />
                </Border>

                <StackPanel Grid.Column="1" VerticalAlignment="Top" Margin="0,10,0,0">
                    <TextBlock FontSize="20" Text="{DynamicResource popup_new_registration_title}" Style="{StaticResource headerLabelTitleStyle}" />
                </StackPanel>

                <Border Grid.Column="2" Margin="5" BorderThickness="1" Background="{Binding SESSION_MANAGER.LogoBackground}">
                    <Image Source="{Binding SESSION_MANAGER.ClientLogoPath}" Margin="3" />
                </Border>
            </Grid>
        </Border>
        <!-- FOOTER -->
        <Border DockPanel.Dock="Bottom" Height="70" Padding="0,4,0,0" BorderThickness="1" 
                BorderBrush="{StaticResource popup_footer_bb}" Background="{StaticResource popup_footer_bg}">
            <DockPanel HorizontalAlignment="Stretch" VerticalAlignment="Center">
                <lego:FancyButton DockPanel.Dock="Left" Style="{StaticResource fancyButtonStyle}"
                                  FuncType="Delete" Title="{DynamicResource btn_delete}" Margin="10,0,0,0" SubTitle="{DynamicResource btn_delete_desc}"
                                  Click="Delete_Click"/>
                
                <lego:FancyButton DockPanel.Dock="Right" Style="{StaticResource fancyButtonStyle}" Width="190"
                                  FuncType="Cancel" Title="{DynamicResource btn_cancel}" SubTitle="{DynamicResource btn_cancel_desc}"
                                  Click="Cancel_Click" />

                <lego:FancyButton DockPanel.Dock="Right" Style="{StaticResource fancyButtonStyle}"
                                  FuncType="Save" Title="{DynamicResource btn_save}" SubTitle="{DynamicResource btn_save_desc}"
                                  IsEnabled="{Binding AllowSave}"
                                  Click="Apply_Click"/>
                <StackPanel />
            </DockPanel>
        </Border>
        <!-- BODY -->
        <Grid Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="45"/>
                <RowDefinition Height="100"/>      
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="210"/>
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <lego:eccTextBlock Grid.Column="0" Text="{DynamicResource key_reg_no2}" FontSize="16" Style="{StaticResource styleLabel}" HorizontalAlignment="Right"/>
                <lego:eccTextBox Grid.Column="1" HorizontalContentAlignment="Center" IsEnabled="False" Style="{StaticResource styleValue}" Margin="10,0"
                                 Text="{Binding RegistrationInfo.REG_NO}" />
            </Grid>

            <lego:eccGroupBox Grid.Row="1" Tag="16" Header="{DynamicResource key_standard}" Margin="5,3,5,3"
                              BorderBrush="{StaticResource groupbox_header_bg}" Background="{StaticResource popup_header_bg}">
                <lego:eccTextBlock Text="{DynamicResource key_qualification}" Style="{StaticResource styleStandardLabel}" />
            </lego:eccGroupBox>

            <DockPanel Grid.Row="2">
                <lego:eccGroupBox Tag="16" Header="{StaticResource popup_new_registration_test_info}" Margin="5,3,5,3"
                                  BorderBrush="{StaticResource groupbox_header_bg}" Background="{StaticResource popup_header_bg}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="40"/>
                            <RowDefinition Height="40"/>
                            <RowDefinition Height="40"/>
                            <RowDefinition Height="40"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="160"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="100"/>
                        </Grid.ColumnDefinitions>

                        <lego:eccTextBlock Grid.Row="0" Grid.Column="1" Text="{DynamicResource popup_new_qualification_registration_toluene}" Style="{StaticResource styleLabel}" Margin="0,11,3,10" />
                        <StackPanel Grid.Row="0" Grid.Column="2" Orientation="Horizontal">
                            <lego:eccRadioButton Content="{DynamicResource popup_toluene4_text}" GroupName="grpToluene" Style="{StaticResource styleRadio}" IsChecked="{Binding IsToluene4}" />
                            <lego:eccRadioButton Content="{DynamicResource popup_toluene10_text}" GroupName="grpToluene" Style="{StaticResource styleRadio}" IsChecked="{Binding IsToluene10}" />
                        </StackPanel>

                        <lego:eccCheckBox Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" x:Name="chkCondition" Content="{DynamicResource popup_test_prop_conditions}" VerticalAlignment="Center" HorizontalAlignment="Center"
                                      IsChecked="{Binding RegistrationInfo.USE_SPECIMEN_CONDITION}"/>

                        <lego:eccTextBlock Grid.Row="2" Grid.Column="1" Text="{DynamicResource key_temperature}" Style="{StaticResource styleLabel}" Margin="0,11,4,10" />
                        <lego:eccTextBox Grid.Row="2" Grid.Column="2" TextMode="Decimal" FontSize="20" HorizontalContentAlignment="Center" VerticalAlignment="Center" 
                                     Text="{Binding RegistrationInfo.CONDITION_TEMPERATURE}" Style="{StaticResource styleValue}"
                                     IsReadOnly="{Binding Path=IsChecked, ElementName=chkCondition, Converter={StaticResource reverseBooleanConverter}}"/>

                        <lego:eccTextBlock Grid.Row="3" Grid.Column="1" Text="{DynamicResource key_humidity}" Style="{StaticResource styleLabel}"/>
                        <lego:eccTextBox Grid.Row="3" Grid.Column="2" TextMode="Decimal" FontSize="20" HorizontalContentAlignment="Center" VerticalAlignment="Center" 
                                     Text="{Binding RegistrationInfo.CONDITION_HUMIDITY}" Style="{StaticResource styleValue}"
                                     IsReadOnly="{Binding Path=IsChecked, ElementName=chkCondition, Converter={StaticResource reverseBooleanConverter}}"/>
                    </Grid>
                </lego:eccGroupBox>
            </DockPanel>
        </Grid>
    </DockPanel>
</bw:BaseIEC61034Popup>
