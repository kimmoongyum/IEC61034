<bw:BaseIEC61034Popup x:Class="FTSolutions.IEC61034.Runner.Popup.Popup_QualificationRegistration"
                        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                        xmlns:sys="clr-namespace:System;assembly=mscorlib"
                        xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
                        xmlns:ini="clr-namespace:FTSolutions.IEC61034.Common.Setting;assembly=FTSolutions.IEC61034.Common"
                        xmlns:bw="clr-namespace:FTSolutions.IEC61034.Common.Base;assembly=FTSolutions.IEC61034.Common"
                        xmlns:lego="clr-namespace:eccFramework.SharedLib.Lego.Brick;assembly=eccFramework.SharedLib.Lego"
                        xmlns:conv="clr-namespace:FTSolutions.IEC61034.Common.Converter;assembly=FTSolutions.IEC61034.Common"
                        AllowsTransparency="True" WindowStyle="None" ResizeMode="NoResize"
                        WindowStartupLocation="CenterScreen"
                        Title="{DynamicResource main_header}" Height="900" Width="1100">
    <bw:BaseIEC61034Popup.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/eccFramework.SharedLib.Core;component/Styles/PopupBrushes.xaml"/>
                <ResourceDictionary Source="/FTSolutions.IEC61034.Runner;component/Styles/IEC61034Brushes.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <conv:StatusCodeToDescConverter x:Key="statusCodeToDescConverter" />
            <conv:StatusCodeToColorConverter x:Key="statusCodeToColorConverter" />
            <conv:ReverseBooleanConverter x:Key="reverseBooleanConverter" />

            <Style TargetType="lego:eccTextBlock">
                <Setter Property="FontSize" Value="15" />
                <Setter Property="FontWeight" Value="Bold" />
                <Setter Property="VerticalAlignment" Value="Center" />
                <Setter Property="HorizontalAlignment" Value="Center" />
                <Setter Property="Margin" Value="2,0,2,0" />
            </Style>

            <Style x:Key="gridTextBlock" TargetType="lego:eccTextBlock">
                <Setter Property="FontSize" Value="15" />
                <Setter Property="VerticalAlignment" Value="Center" />
                <Setter Property="HorizontalAlignment" Value="Center" />
                <Setter Property="Margin" Value="2,0,2,0" />
            </Style>

            <Style TargetType="{x:Type ListBoxItem}">
                <Setter Property="ContentTemplate">
                    <Setter.Value>
                        <DataTemplate>
                            <Border Margin="2">
                                <StackPanel Orientation="Horizontal">
                                    <Grid Height="25">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="140"></ColumnDefinition>
                                            <ColumnDefinition Width="200"></ColumnDefinition>
                                            <ColumnDefinition Width="200"></ColumnDefinition>
                                            <ColumnDefinition Width="220"></ColumnDefinition>                                          
                                            <ColumnDefinition Width="*" ></ColumnDefinition>
                                        </Grid.ColumnDefinitions>

                                        <lego:eccTextBlock Grid.Column="0" Text="{Binding Path=REG_NO}" Style="{StaticResource gridTextBlock}"/>
                                        <lego:eccTextBlock Grid.Column="1" Text="{Binding Path=TOLUENE_CONTENT}" Style="{StaticResource gridTextBlock}" />                                        
                                        <lego:eccTextBlock Grid.Column="2" Text="{Binding Path=STATUS, Converter={StaticResource statusCodeToDescConverter}}" Style="{StaticResource gridTextBlock}"
                                                           Foreground="{Binding Path=STATUS, Converter={StaticResource statusCodeToColorConverter}}"/>
                                        <lego:eccTextBlock Grid.Column="3" Text="{Binding Path=TEST_DATE_TIME}" Style="{StaticResource gridTextBlock}" />
                                        <lego:eccTextBlock Grid.Column="4" Text="{Binding Path=PRODUCT_DESC}" Style="{StaticResource gridTextBlock}"/>
                                    </Grid>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </bw:BaseIEC61034Popup.Resources>

    <DockPanel Background="{StaticResource popup_background}">
        <!-- HEADER -->
        <Border DockPanel.Dock="Top" Height="85" BorderThickness="1"
                BorderBrush="{StaticResource popup_header_bb}" Background="{StaticResource popup_header_bg}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="140"/>
                    <ColumnDefinition />
                    <ColumnDefinition Width="200"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" BorderThickness="1" Background="White" Margin="5,16">
                    <Image Source="pack://application:,,,/eccFramework.SharedLib.Core;component/Images/ftsolutions_logo.png" 
                           RenderOptions.BitmapScalingMode="HighQuality" SnapsToDevicePixels="True" Margin="5" HorizontalAlignment="Right" />
                </Border>

                <StackPanel Grid.Column="1" VerticalAlignment="Top" Margin="0,10,0,0">
                    <TextBlock FontSize="20" Text="{DynamicResource popup_qualification_registration_desc}" Style="{StaticResource headerLabelTitleStyle}" />
                </StackPanel>

                <Border Grid.Column="2" Margin="10" BorderThickness="1" Background="{Binding SESSION_MANAGER.LogoBackground}">
                    <Image Source="{Binding SESSION_MANAGER.ClientLogoPath}" Margin="3" />
                </Border>
            </Grid>
        </Border>
        <!-- FOOTER -->
        <Border DockPanel.Dock="Bottom" Height="70" Padding="0,4,0,0" BorderThickness="1" 
                BorderBrush="{StaticResource popup_footer_bb}" Background="{StaticResource popup_footer_bg}">
            <DockPanel HorizontalAlignment="Stretch" VerticalAlignment="Center">
                <lego:FancyButton DockPanel.Dock="Left" Style="{StaticResource fancyButtonStyle}" Height="60"
                                  FuncType="Report" Title="{DynamicResource btn_report}" SubTitle="{DynamicResource btn_report_desc}"
                                  Command="{Binding ReportCommand}" />

                <lego:FancyButton DockPanel.Dock="Left" Style="{StaticResource fancyButtonStyle}" Height="60"
                                  FuncType="New" Title="{DynamicResource btn_new}" Margin="10,0,0,0" SubTitle="{DynamicResource btn_new_desc}"
                                  Click="New_Click"/>

                
                <lego:FancyButton DockPanel.Dock="Right" Style="{StaticResource fancyButtonStyle}" Height="60"
                                  FuncType="Cancel" Title="{DynamicResource btn_close}" Margin="0,0,10,0" SubTitle="{DynamicResource btn_close_desc}"
                                  Command="{Binding CloseClick}" />
 
                <lego:FancyButton DockPanel.Dock="Right" Style="{StaticResource fancyButtonStyle}" Height="60" Width="240"
                                  FuncType="Next" Title="{DynamicResource btn_qualification}" SubTitle="{DynamicResource btn_qualification_desc}"
                                  Click="Qualification_Click" />
                <StackPanel />
            </DockPanel>
        </Border>
        <!-- BODY -->
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="60"></RowDefinition>
                <RowDefinition Height="40"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" BorderThickness="1" BorderBrush="{StaticResource popup_footer_bb}" Background="{StaticResource popup_footer_bg}">
                <DockPanel HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="10,0,10,0">
                    <lego:eccTextBlock Text="{DynamicResource key_filter_condition}" DockPanel.Dock="Left" FontSize="20" FontWeight="Bold" VerticalAlignment="Center"/>
                    <lego:eccComboBox DockPanel.Dock="Left" FontSize="20" Width="100" Height="40" Margin="20,0,0,0" VerticalAlignment="Center" HorizontalContentAlignment="Center"
                                      ItemsSource="{Binding YearDataSource}" SelectedValue="{Binding CurrentYear}">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="SelectionChanged">
                                <i:InvokeCommandAction Command="{Binding YearChanged}" />
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </lego:eccComboBox>
                    <lego:eccComboBox DockPanel.Dock="Left" FontSize="20" Width="80" Height="40" Margin="10,0,10,0" VerticalAlignment="Center" HorizontalContentAlignment="Center"
                                      ItemsSource="{Binding MonthDataSource}" SelectedValue="{Binding CurrentMonth}">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="SelectionChanged">
                                <i:InvokeCommandAction Command="{Binding MonthChanged}" />
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </lego:eccComboBox>

                    <lego:eccRadioButton Content="{DynamicResource key_registration}" Command="{Binding FilterCommand}" CommandParameter="R" GroupName="grpFilter" VerticalAlignment="Center" Margin="20,0,0,0" FontSize="20" />
                    <lego:eccRadioButton Content="{DynamicResource key_test}" Command="{Binding FilterCommand}" CommandParameter="T" GroupName="grpFilter" VerticalAlignment="Center" Margin="20,0,0,0" FontSize="20" />
                    <lego:eccRadioButton Content="{DynamicResource key_all}" IsChecked="True" Command="{Binding FilterCommand}" CommandParameter="ALL" GroupName="grpFilter" VerticalAlignment="Center" Margin="20,0,0,0" FontSize="20" />

                    <StackPanel />
                </DockPanel>
            </Border>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="140"></ColumnDefinition>
                    <ColumnDefinition Width="200"></ColumnDefinition>
                    <ColumnDefinition Width="200"></ColumnDefinition>
                    <ColumnDefinition Width="220"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>

                <lego:eccTextBlock Grid.Column="0" Text="{DynamicResource key_reg_no}" />                
                <lego:eccTextBlock Grid.Column="1" Text="{DynamicResource key_toluene_content}" />
                <lego:eccTextBlock Grid.Column="2" Text="{DynamicResource key_status}" />
                <lego:eccTextBlock Grid.Column="3" Text="{DynamicResource key_test_date}" />
                <lego:eccTextBlock Grid.Column="4" Text="{DynamicResource key_desc}" HorizontalAlignment="Center"/>
            </Grid>
            <DockPanel Grid.Row="2" Height="Auto" Width="Auto">
                <ListBox x:Name="lstRegistration" IsSynchronizedWithCurrentItem="True" Background="{StaticResource popup_footer_bg}"
                         MouseDoubleClick="lstRegistration_MouseDoubleClick"
                         SelectedItem="{Binding CurrentRegistrationInfo}"
                         ItemsSource="{Binding RegistrationList}"/>
            </DockPanel>
        </Grid>
    </DockPanel>
</bw:BaseIEC61034Popup>
