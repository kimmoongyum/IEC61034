<bw:BaseIEC61034Popup x:Class="FTSolutions.IEC61034.Runner.Popup.Popup_TestProperties"
                        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                        xmlns:sys="clr-namespace:System;assembly=mscorlib"
                        xmlns:d3="http://research.microsoft.com/DynamicDataDisplay/1.0"
                        xmlns:bw="clr-namespace:FTSolutions.IEC61034.Common.Base;assembly=FTSolutions.IEC61034.Common"
                        xmlns:lego="clr-namespace:eccFramework.SharedLib.Lego.Brick;assembly=eccFramework.SharedLib.Lego"
                        xmlns:conv="clr-namespace:FTSolutions.IEC61034.Common.Converter;assembly=FTSolutions.IEC61034.Common"
                        AllowsTransparency="True" WindowStyle="None" ResizeMode="NoResize"
                        WindowStartupLocation="CenterScreen"
                        Title="{DynamicResource main_header}" Height="750" Width="600">
    <bw:BaseIEC61034Popup.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/eccFramework.SharedLib.Core;component/Styles/PopupBrushes.xaml"/>
                <ResourceDictionary Source="/FTSolutions.IEC61034.Runner;component/Styles/IEC61034Brushes.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <conv:ReverseBooleanConverter x:Key="reverseBooleanConverter" />

            <Style x:Key="styleRegistrationLabel" TargetType="lego:eccTextBlock">
                <Setter Property="Margin" Value="4" />
                <Setter Property="Foreground" Value="Silver" />
                <Setter Property="HorizontalAlignment" Value="Right" />
                <Setter Property="VerticalAlignment" Value="Center" />
                <Setter Property="FontSize" Value="14" />
            </Style>

            <Style x:Key="styleRegistrationValue" TargetType="lego:eccTextBox">
                <Setter Property="FontSize" Value="14" />
                <Setter Property="FontWeight" Value="Bold" />
                <Setter Property="VerticalAlignment" Value="Center" />
                <Setter Property="HorizontalAlignment" Value="Stretch" />
                <Setter Property="HorizontalContentAlignment" Value="Center" />
                <Setter Property="VerticalContentAlignment" Value="Center" />
                <Setter Property="Height" Value="34" />
                <Setter Property="Margin" Value="5,1" />
                <Setter Property="IsReadOnly" Value="True" />
                <Setter Property="Background" Value="White" />
                <Setter Property="BorderBrush" Value="{StaticResource state_dark_color}" />
                <Setter Property="Foreground" Value="White" />
            </Style>

            <Style x:Key="styleAmbientLabel" TargetType="lego:eccTextBlock">
                <Setter Property="Margin" Value="4" />
                <Setter Property="Foreground" Value="Silver" />
                <Setter Property="HorizontalAlignment" Value="Right" />
                <Setter Property="VerticalAlignment" Value="Center" />
                <Setter Property="FontSize" Value="14" />
            </Style>

            <Style x:Key="styleAmbientValue" TargetType="lego:eccTextBox">
                <Setter Property="FontWeight" Value="Bold" />
                <Setter Property="FontSize" Value="18" />
                <Setter Property="VerticalAlignment" Value="Center" />
                <Setter Property="HorizontalAlignment" Value="Stretch" />
                <Setter Property="HorizontalContentAlignment" Value="Center" />
                <Setter Property="VerticalContentAlignment" Value="Center" />
                <Setter Property="Height" Value="36" />
                <Setter Property="Margin" Value="4,1" />
                <Setter Property="IsReadOnly" Value="False" />
                <Setter Property="BorderBrush" Value="{StaticResource state_none_color}" />
                <Setter Property="Foreground" Value="{StaticResource state_valid_color}" />
            </Style>

            <Style x:Key="styleRadio" TargetType="lego:eccRadioButton">
                <Setter Property="FontWeight" Value="Bold" />
                <Setter Property="FontSize" Value="14" />
                <Setter Property="Margin" Value="10,4" />
            </Style>

            <Style x:Key="styleCheck" TargetType="lego:eccCheckBox">
                <Setter Property="FontWeight" Value="Bold" />
                <Setter Property="FontSize" Value="14" />
                <Setter Property="Margin" Value="10,4" />
            </Style>
        </ResourceDictionary>
    </bw:BaseIEC61034Popup.Resources>

    <DockPanel Background="{StaticResource popup_background}">
        <!-- HEADER -->
        <Border DockPanel.Dock="Top" Height="85" BorderThickness="1"
                BorderBrush="{StaticResource popup_header_bb}" Background="{StaticResource popup_header_bg}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="140"/>
                    <ColumnDefinition />
                    <ColumnDefinition Width="200"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" BorderThickness="1" Background="White" Margin="5,16">
                    <Image Source="pack://application:,,,/eccFramework.SharedLib.Core;component/Images/ftsolutions_logo.png" 
                           RenderOptions.BitmapScalingMode="HighQuality" SnapsToDevicePixels="True" Margin="5" HorizontalAlignment="Right" />
                </Border>

                <StackPanel Grid.Column="1" VerticalAlignment="Top" Margin="0,10,0,0">
                    <TextBlock FontSize="20" Text="{DynamicResource popup_test_prop_title}" Style="{StaticResource headerLabelTitleStyle}" />
                </StackPanel>

                <Border Grid.Column="2" Margin="10" BorderThickness="1" Background="{Binding SESSION_MANAGER.LogoBackground}">
                    <Image Source="{Binding SESSION_MANAGER.ClientLogoPath}" Margin="3" />
                </Border>
            </Grid>
        </Border>
        <!-- FOOTER -->
        <Border DockPanel.Dock="Bottom" Height="70" Padding="0,4,0,0" BorderThickness="1" 
                BorderBrush="{StaticResource popup_footer_bb}" Background="{StaticResource popup_footer_bg}">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                <lego:FancyButton Style="{StaticResource fancyButtonStyle}" Visibility="{Binding NextVisibility}"
                                  FuncType="Next" Title="{DynamicResource btn_next}" SubTitle="{DynamicResource btn_next_desc}" Height="60"
                                  Command="{Binding NextClick}"/>

                <lego:FancyButton Style="{StaticResource fancyButtonStyle}" Visibility="{Binding CancelVisibility}"
                                  FuncType="Cancel" Title="{DynamicResource btn_cancel}" SubTitle="{DynamicResource btn_cancel_desc}" Height="60"
                                  Command="{Binding CancelClick}" />
                <StackPanel />
            </StackPanel>
        </Border>
        <!-- BODY -->
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="250"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <lego:eccGroupBox Grid.Row="0" Tag="16" Header="{DynamicResource popup_test_prop_reg_info}" Margin="5,3,5,5"
                              BorderBrush="{StaticResource groupbox_header_bg}" Background="{StaticResource popup_header_bg}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="190"/>
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <lego:eccTextBlock Grid.Row="0" Grid.Column="0" Text="{DynamicResource key_reg_no2}" Style="{StaticResource styleRegistrationLabel}"/>
                    <lego:eccTextBox Grid.Row="0" Grid.Column="1" Style="{StaticResource styleRegistrationValue}"
                                         Text="{Binding RegistrationInfo.REG_NO}" />

                    <lego:eccTextBlock Grid.Row="1" Grid.Column="0" Text="{DynamicResource key_cust_no}" Style="{StaticResource styleRegistrationLabel}"/>
                    <lego:eccTextBox Grid.Row="1" Grid.Column="1" Style="{StaticResource styleRegistrationValue}"
                                         Text="{Binding RegistrationInfo.CUST_NO}" />

                    <lego:eccTextBlock Grid.Row="2" Grid.Column="0" Text="{DynamicResource popup_new_registration_sponsor}" Style="{StaticResource styleRegistrationLabel}" />
                    <lego:eccTextBox Grid.Row="2" Grid.Column="1" Style="{StaticResource styleRegistrationValue}" HorizontalContentAlignment="Left"
                                         Text="{Binding RegistrationInfo.SPONSOR_NAME}" />

                    <lego:eccTextBlock Grid.Row="3" Grid.Column="0" Text="{DynamicResource key_manufacture_supplier}" Style="{StaticResource styleRegistrationLabel}" />
                    <lego:eccTextBox Grid.Row="3" Grid.Column="1" Style="{StaticResource styleRegistrationValue}" HorizontalContentAlignment="Left"
                                         Text="{Binding RegistrationInfo.SUPPLIER_NAME}" />

                    <lego:eccTextBlock Grid.Row="4" Grid.Column="0" Text="{DynamicResource popup_test_prop_product_material}" Style="{StaticResource styleRegistrationLabel}" />
                    <lego:eccTextBox Grid.Row="4" Grid.Column="1" Style="{StaticResource styleRegistrationValue}" HorizontalContentAlignment="Left"
                                         Text="{Binding RegistrationInfo.PRODUCT_NAME}" />
                </Grid>
            </lego:eccGroupBox>

            <lego:eccGroupBox Grid.Row="1" Tag="16" Header="{DynamicResource popup_new_registration_condition}" Margin="5"
                              BorderBrush="{StaticResource groupbox_header_bg}" Background="{StaticResource popup_header_bg}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="50"/>
                        <lego:CollapsibleRowDefinition Height="90" Collapsed="{Binding IsCableRound, Converter={StaticResource reverseBooleanConverter}}"/>
                        <lego:CollapsibleRowDefinition Height="140" Collapsed="{Binding IsCableFlat, Converter={StaticResource reverseBooleanConverter}}"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="80"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="190"/>
                        <ColumnDefinition Width="90"/>
                        <ColumnDefinition />
                        <ColumnDefinition Width="90"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                        <lego:eccTextBlock Text="*" Style="{StaticResource styleAmbientLabel}" Foreground="{StaticResource state_valid_color}"/>
                        <lego:eccTextBlock Text="{DynamicResource popup_test_prop_number}" Style="{StaticResource styleAmbientLabel}" Foreground="{StaticResource state_valid_color}"/>
                    </StackPanel>
                    <StackPanel Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="3" HorizontalAlignment="Left" Orientation="Horizontal">
                        <lego:eccTextBox Width="80" TextMode="Number" FontSize="20" 
                                             Text="{Binding TestItem_Properties.Number}" Style="{StaticResource styleAmbientValue}"/>
                        <lego:eccTextBlock Text="/" Margin="10" Style="{StaticResource styleAmbientLabel}" />
                        <lego:eccTextBox Width="80" TextMode="Number" FontSize="20" 
                                             Text="{Binding TestItem_Properties.TotalNumber}" Style="{StaticResource styleAmbientValue}"/>
                    </StackPanel>       

                    <lego:eccTextBlock Grid.Row="1" Grid.Column="0" Text="{DynamicResource popup_new_registration_cable_type}" Style="{StaticResource styleRegistrationLabel}" />
                    <StackPanel Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3" HorizontalAlignment="Left" Orientation="Horizontal" Margin="5">
                        <lego:eccRadioButton Content="ROUND" GroupName="grpCable" Style="{StaticResource styleRadio}" Width="Auto" Margin="2,0,8,0" VerticalAlignment="Center"
                                                 IsChecked="{Binding IsCableRound}" IsHitTestVisible="False" Focusable="False"/>
                        <lego:eccRadioButton Content="FLAT" GroupName="grpCable" Style="{StaticResource styleRadio}" Width="Auto" Margin="12,0" VerticalAlignment="Center"
                                                 IsChecked="{Binding IsCableFlat}" IsHitTestVisible="False" Focusable="False"/>
                    </StackPanel>

                    <lego:eccGroupBox Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="4" HeaderHeight="28" Header="{DynamicResource popup_new_registration_number_of_cables}" Margin="5" BorderThickness="2" BorderBrush="Black">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="170"/>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="180"/>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <lego:eccTextBlock Grid.Row="0" Grid.Column="0" Text="{DynamicResource popup_new_registration_cable_diameter}" Style="{StaticResource styleRegistrationLabel}" />
                            <lego:eccTextBox Grid.Row="0" Grid.Column="1" Style="{StaticResource styleRegistrationValue}" TextMode="Decimal" Margin="10,0,10,0"
                                                 Text="{Binding RegistrationInfo.CABLE_DIAMETER}"/>

                            <lego:eccTextBlock Grid.Row="0" Grid.Column="2" Text="{DynamicResource popup_new_registration_test_pieces}" Style="{StaticResource styleRegistrationLabel}" />
                            <lego:eccTextBox Grid.Row="0" Grid.Column="3" Style="{StaticResource styleRegistrationValue}" TextMode="Number"  Margin="10,0,10,0"
                                                 Text="{Binding RegistrationInfo.TEST_PIECES_COUNT}"/>

                        </Grid>
                    </lego:eccGroupBox>

                    <lego:eccGroupBox Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="4" HeaderHeight="28" Header="{DynamicResource popup_new_registration_number_of_cables}" Margin="5" BorderThickness="2" BorderBrush="Black">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="170"/>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="180"/>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <lego:eccTextBlock Grid.Row="0" Grid.Column="0" Text="{DynamicResource popup_new_registration_cable_minor_axis}" Style="{StaticResource styleRegistrationLabel}" />
                            <lego:eccTextBox Grid.Row="0" Grid.Column="1" Style="{StaticResource styleRegistrationValue}" Margin="10,0,10,0" TextMode="Decimal" 
                                                 Text="{Binding RegistrationInfo.CABLE_MINOR_AXIS}"/>

                            <lego:eccTextBlock Grid.Row="0" Grid.Column="2" Text="{DynamicResource popup_new_registration_cable_major_axis}" Style="{StaticResource styleRegistrationLabel}" />
                            <lego:eccTextBox Grid.Row="0" Grid.Column="3" Style="{StaticResource styleRegistrationValue}" Margin="10,0,10,0" TextMode="Decimal" 
                                                 Text="{Binding RegistrationInfo.CABLE_MAJOR_AXIS}"/>

                            <lego:eccTextBlock Grid.Row="1" Grid.Column="0" Text="{DynamicResource popup_new_registration_cable_diameter}" Style="{StaticResource styleRegistrationLabel}" />
                            <lego:eccTextBox Grid.Row="1" Grid.Column="1" Style="{StaticResource styleRegistrationValue}" TextMode="Decimal" Margin="10,0,10,0"
                                                 Text="{Binding RegistrationInfo.CABLE_DIAMETER}"/>
                            
                            <lego:eccTextBlock Grid.Row="1" Grid.Column="2" Text="{DynamicResource popup_new_registration_test_pieces}" Style="{StaticResource styleRegistrationLabel}" />
                            <lego:eccTextBox Grid.Row="1" Grid.Column="3" Style="{StaticResource styleRegistrationValue}" TextMode="Number"  Margin="10,0,10,0"
                                                 Text="{Binding RegistrationInfo.TEST_PIECES_COUNT}"/>
                        </Grid>
                    </lego:eccGroupBox>
                </Grid>
            </lego:eccGroupBox>
        </Grid>
    </DockPanel>
</bw:BaseIEC61034Popup>
