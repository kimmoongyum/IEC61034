<bw:BaseIEC61034Popup x:Class="FTSolutions.IEC61034.Runner.Popup.Popup_Light"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:sys="clr-namespace:System;assembly=mscorlib"
                 xmlns:d3="http://research.microsoft.com/DynamicDataDisplay/1.0"
                 xmlns:bw="clr-namespace:FTSolutions.IEC61034.Common.Base;assembly=FTSolutions.IEC61034.Common"  
                 xmlns:lego="clr-namespace:eccFramework.SharedLib.Lego.Brick;assembly=eccFramework.SharedLib.Lego"
                 xmlns:conv="clr-namespace:FTSolutions.IEC61034.Common.Converter;assembly=FTSolutions.IEC61034.Common"
                 xmlns:util="clr-namespace:FTSolutions.IEC61034.Runner.Popup.Utility"
                 AllowsTransparency="True" WindowStyle="None" ResizeMode="NoResize"
                 WindowStartupLocation="CenterScreen"
                 Title="{DynamicResource main_header}" Width="900" Height="900">
    <bw:BaseIEC61034Popup.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/eccFramework.SharedLib.Core;component/Styles/PopupBrushes.xaml"/>
                <ResourceDictionary Source="/FTSolutions.IEC61034.Runner;component/Styles/IEC61034Brushes.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <conv:BooleanToVisibilityConverter x:Key="booleanToVisibilityConverter" />
            <conv:BooleanToValidTextConverter x:Key="booleanToValidTextConverter" />
            <conv:BooleanToValidColorConverter x:Key="booleanToValidColorConverter" />
            <conv:ReverseBooleanConverter x:Key="reverseBooleanConverter" />

            <Style x:Key="styleResultTitle" TargetType="lego:eccTextBlock">
                <Setter Property="Margin" Value="10,5" />
                <Setter Property="Foreground" Value="DarkOrange" />
                <Setter Property="FontSize" Value="16" />
                <Setter Property="FontWeight" Value="Bold" />
                <Setter Property="VerticalAlignment" Value="Center" />
                <Setter Property="HorizontalAlignment" Value="Right" />
            </Style>

            <Style x:Key="styleLaserPower" TargetType="lego:BulletPushButton">
                <Setter Property="VerticalAlignment" Value="Center" />
                <Setter Property="HorizontalAlignment" Value="Center" />
                <Setter Property="FontSize" Value="15" />
                <Setter Property="Width" Value="80" />
                <Setter Property="Height" Value="80" />
            </Style>

            <Style x:Key="styleDarkClear" TargetType="lego:BulletActionButton">
                <Setter Property="Margin" Value="10" />
                <Setter Property="Width" Value="100" />
                <Setter Property="Height" Value="100" />
                <Setter Property="FontSize" Value="15" />
                <Setter Property="FontWeight" Value="Bold" />
                <Setter Property="VerticalAlignment" Value="Center" />
                <Setter Property="HorizontalAlignment" Value="Center" />
            </Style>
        </ResourceDictionary>
    </bw:BaseIEC61034Popup.Resources>

    <DockPanel Background="{StaticResource popup_background}">
        <!-- HEADER -->
        <Border DockPanel.Dock="Top" Height="85" BorderThickness="1"
                BorderBrush="{StaticResource popup_header_bb}" Background="{StaticResource popup_header_bg}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="140"/>
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" BorderThickness="1" Background="White" Margin="10,16">
                    <Image Source="pack://application:,,,/eccFramework.SharedLib.Core;component/Images/ftsolutions_logo.png" 
                           RenderOptions.BitmapScalingMode="HighQuality" SnapsToDevicePixels="True" Margin="5" HorizontalAlignment="Right" />
                </Border>

                <StackPanel Grid.Column="1" Margin="0,10,0,0">
                    <TextBlock FontSize="20" Text="{DynamicResource popup_light_title}" Style="{StaticResource headerLabelTitleStyle}" />
                    <TextBlock Text="{DynamicResource popup_light_desc}" Style="{StaticResource headerLabelContentStyle}" TextWrapping="Wrap"/>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <lego:ActionButton Content="{DynamicResource key_zero}" Width="70" Height="70" Margin="10,0,5,0" FontSize="14" BorderBrush="{StaticResource state_none_color}"
                                       Command="{Binding LaserDarkCommand}"/>
                    <lego:ActionButton Content="{DynamicResource key_span}" Width="70" Height="70" Margin="5,0,10,0" FontSize="14" BorderBrush="{StaticResource state_action_color}"
                                       Command="{Binding LaserClearCommand}"/>

                    <Border Margin="10,14" BorderThickness="1" Background="White" Width="200">
                        <Image Source="/FTSolutions.IEC61034.Runner;component/Images/logo.png" Margin="5"/>
                    </Border>
                </StackPanel>

            </Grid>
        </Border>
        <!-- FOOTER -->
        <Border DockPanel.Dock="Bottom" Height="70" Padding="0,4,0,0" BorderThickness="1" 
                BorderBrush="{StaticResource popup_footer_bb}" Background="{StaticResource popup_footer_bg}">
            <DockPanel>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <ToggleButton x:Name="btnController" Background="Transparent" BorderThickness="0"
                                  Width="60" Margin="10,0,0,0"
                                  Style="{StaticResource SettingToggleButtonStyleKey}"
                                  ContentTemplate="{StaticResource SettingToggleButtonContentTemplateKey}"/>
                    <Popup IsOpen="{Binding ElementName=btnController, Path=IsChecked}"
                           PlacementTarget="{Binding ElementName=btnController}"
                           Placement="Right" StaysOpen="False" AllowsTransparency="True" HorizontalOffset="1" VerticalOffset="-3" >
                        <Border BorderBrush="#cF8c8c8c" BorderThickness="1" Background="#cF000000">
                            <util:UC_RemoteControl />
                        </Border>
                    </Popup>
                </StackPanel>

                <StackPanel IsEnabled="{Binding IsStopChecked}" Orientation="Horizontal" HorizontalAlignment="Right">
                    <lego:FancyButton Style="{StaticResource fancyButtonStyle}" Height="60"
                                      FuncType="Back" Title="{DynamicResource btn_back}" SubTitle="{DynamicResource btn_back_desc}"
                                      Visibility="{Binding BackVisibility}" Command="{Binding BackClick}" />
                    <lego:FancyButton Style="{StaticResource fancyButtonStyle}" Height="60"
                                      FuncType="Next" Title="{DynamicResource btn_next}" SubTitle="{DynamicResource btn_next_desc}"
                                      Visibility="{Binding NextVisibility}" Command="{Binding NextClick}" />
                    <lego:FancyButton Style="{StaticResource fancyButtonStyle}" Height="60"
                                      FuncType="Cancel" Title="{DynamicResource btn_cancel}" SubTitle="{DynamicResource btn_cancel_desc}"
                                      Visibility="{Binding CancelVisibility}" Command="{Binding CancelClick}" />
                    <lego:FancyButton Style="{StaticResource fancyButtonStyle}" Height="60"
                                      FuncType="Cancel" Title="{DynamicResource btn_close}" SubTitle="{DynamicResource btn_close_desc}"
                                      Visibility="{Binding CloseVisibility}" Command="{Binding CloseClick}" />
                </StackPanel>
            </DockPanel>
        </Border>
        <!-- BODY -->
        <Grid Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="380"/>
            </Grid.RowDefinitions>

            <TabControl Grid.Row="0" Background="#2D2D30" BorderThickness="1" TabStripPlacement="Top" Margin="2,0"
                        ItemContainerStyle="{StaticResource chevronTabItemStyle}">
                <lego:MainTabItem FontSize="12" Header="{DynamicResource key_transmission}" Width="172" Height="50" Background="{StaticResource popup_header_bg}">
                    <d3:ChartPlotter Margin="5" LegendVisibility="Collapsed" LegendVisible="False" FontSize="10"
                                     Background="{StaticResource graph_dark_bg}" Foreground="{StaticResource graph_dark_fg}" BorderBrush="{StaticResource graph_dark_bb}">
                        <!--<d3:LineGraph DataSource="{Binding SeriesDummyMin.SeriesDataSource}" StrokeThickness="0"/>
                        <d3:LineGraph DataSource="{Binding SeriesDummyMax.SeriesDataSource}" StrokeThickness="0"/>-->
                        <d3:LineGraph DataSource="{Binding SeriesTransmission.SeriesDataSource}" Stroke="{StaticResource dark_series_color_1}" StrokeThickness="1.5" />

                        <d3:VerticalAxisTitle Content="{DynamicResource key_transmission}" FontSize="12" FontWeight="Bold"/>
                        <d3:HorizontalAxisTitle Content="{DynamicResource key_time_s}" FontSize="12" FontWeight="Bold"/>
                    </d3:ChartPlotter>
                </lego:MainTabItem>
            </TabControl>

            <Border Grid.Row="1" BorderThickness="3,1,3,3" Margin="2,5,2,2" BorderBrush="DarkGoldenrod" Background="Black" ClipToBounds="True">
                <DockPanel>
                    <Viewbox DockPanel.Dock="Left" ClipToBounds="True" Margin="10" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <util:UC_StepZeroSpan RenderOptions.BitmapScalingMode="HighQuality" SnapsToDevicePixels="True"/>
                    </Viewbox>

                    <Grid>
                        <Viewbox ClipToBounds="True" Width="450" VerticalAlignment="Center" Margin="0,0,0,100">
                            <util:UC_Light_Part LightVisibility="{Binding SESSION_MANAGER.IsLightOn, Converter={StaticResource booleanToVisibilityConverter}}" />
                        </Viewbox>

                        <StackPanel Orientation="Vertical" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="40">
                            <lego:BulletPushButton Grid.Column="0" Content="{DynamicResource key_on}" Width="60" Height="60" Margin="5" FontSize="14" BorderBrush="{StaticResource state_valid_color}" GroupName="grpPower"
                                                   IsChecked="{Binding SESSION_MANAGER.IsLightOn, Mode=OneWay}"
                                                   Command="{Binding RunDOCommand}" CommandParameter="DO_LIGHT_ON"/>
                            
                            <lego:BulletPushButton Grid.Column="1" Content="{DynamicResource key_off}" Width="60" Height="60" Margin="5" FontSize="14" BorderBrush="{StaticResource state_invalid_color}" GroupName="grpPower"
                                                   IsChecked="{Binding SESSION_MANAGER.IsLightOff, Mode=OneWay}"
                                                   Command="{Binding RunDOCommand}" CommandParameter="DO_LIGHT_OFF"/>
                        </StackPanel>
                    </Grid>
                </DockPanel>
            </Border>
        </Grid>
    </DockPanel>
</bw:BaseIEC61034Popup>
