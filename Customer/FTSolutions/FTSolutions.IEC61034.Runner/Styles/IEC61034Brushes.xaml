<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:PresentationOptions="http://schemas.microsoft.com/winfx/2006/xaml/presentation/options"
                    xmlns:lego="clr-namespace:eccFramework.SharedLib.Lego.Brick;assembly=eccFramework.SharedLib.Lego">
    <Style x:Key="SettingToggleButtonStyleKey" TargetType="ToggleButton">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ToggleButton">
                    <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <BitmapImage PresentationOptions:Freeze="true" x:Key="SettingNormalImageKey">pack://application:,,,/eccFramework.SharedLib.Core;component/Images/ic_setting_off.png</BitmapImage>
    <BitmapImage PresentationOptions:Freeze="true" x:Key="SettingOverImageKey">pack://application:,,,/eccFramework.SharedLib.Core;component/Images/ic_setting_on.png</BitmapImage>
    <BitmapImage PresentationOptions:Freeze="true" x:Key="SettingPressImageKey">pack://application:,,,/eccFramework.SharedLib.Core;component/Images/ic_setting_on.png</BitmapImage>

    <DataTemplate x:Key="SettingToggleButtonContentTemplateKey">
        <StackPanel>
            <Image x:Name="image" Margin="3" SnapsToDevicePixels="True" UseLayoutRounding="True" RenderOptions.BitmapScalingMode="HighQuality"
                           Source="{StaticResource SettingNormalImageKey}" />
        </StackPanel>
        <DataTemplate.Triggers>
            <DataTrigger Binding="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=ToggleButton}, Path=IsMouseOver}" Value="true">
                <Setter Property="Source" TargetName="image" Value="{StaticResource SettingOverImageKey}"/>
            </DataTrigger>
            <DataTrigger Binding="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=ToggleButton}, Path=IsChecked}" Value="true">
                <Setter Property="Source" TargetName="image" Value="{StaticResource SettingPressImageKey}"/>
            </DataTrigger>
        </DataTemplate.Triggers>
    </DataTemplate>

    <Style x:Key="chevronTabItemStyle" TargetType="{x:Type TabItem}">
        <Setter Property="SnapsToDevicePixels" Value="True" />

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type TabItem}">
                    <StackPanel Orientation="Horizontal" Margin="0,0,-7,0" Height="40">
                        <Path Data="M0,0 10,0 10,40 0,40 10,20" Fill="{TemplateBinding Background}"/>
                        <Grid >
                            <Rectangle Fill="{TemplateBinding Background}" />
                            <TextBlock Name="HeaderArrow" Margin="10,5" VerticalAlignment="Center" FontSize="{TemplateBinding FontSize}" FontWeight="Bold"
                                           Text="{TemplateBinding Header}" Foreground="Gray"/>
                        </Grid>
                        <Path Data="M0,0 10,20 0,40" Fill="{TemplateBinding Background}" />
                    </StackPanel>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter TargetName="HeaderArrow" Property="Foreground" Value="#FFFFD100" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="chevronFixedTabItemStyle" TargetType="{x:Type TabItem}">
        <Setter Property="SnapsToDevicePixels" Value="True" />

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type TabItem}">
                    <DockPanel Margin="0,0,-7,0" Height="40">
                        <Path DockPanel.Dock="Left" Data="M0,0 10,0 10,40 0,40 10,20" Fill="{TemplateBinding Background}"/>
                        <Path DockPanel.Dock="Right" Data="M0,0 10,20 0,40" Fill="{TemplateBinding Background}" />
                        <Grid>
                            <Rectangle Fill="{TemplateBinding Background}" />
                            <TextBlock Name="HeaderArrow" Margin="10,5" VerticalAlignment="Center" FontSize="{TemplateBinding FontSize}" FontWeight="Bold"
                                       Text="{TemplateBinding Header}" Foreground="Gray"/>
                        </Grid>
                    </DockPanel>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter TargetName="HeaderArrow" Property="Foreground" Value="#FFFFD100" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="revChevronTabItemStyle" TargetType="{x:Type TabItem}">
        <Setter Property="SnapsToDevicePixels" Value="True" />

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type TabItem}">
                    <StackPanel Orientation="Horizontal" Margin="0,0,-7,0" Height="40">
                        <Path Data="M0,20 10,40 10,0" Fill="{TemplateBinding Background}"/>
                        <Grid>
                            <Rectangle Fill="{TemplateBinding Background}" />
                            <TextBlock Name="HeaderArrow" Margin="10,5" VerticalAlignment="Center" FontSize="{TemplateBinding FontSize}" FontWeight="Bold"
                                           Text="{TemplateBinding Header}" Foreground="Gray"/>
                        </Grid>
                        <Path Data="M0,0 10,0 0,20 10,40 0,40" Fill="{TemplateBinding Background}" />
                    </StackPanel>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter TargetName="HeaderArrow" Property="Foreground" Value="#FFFFD100" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>